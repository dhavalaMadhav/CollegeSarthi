    </select>
    <textarea id="notesTextarea" class="status-select" placeholder="Add internal notes..." style="min-height: 80px; margin-top: 10px; resize: vertical;"></textarea>
    <button class="update-btn" onclick="updateLeadStatus()">
        <i class="fas fa-save"></i> Update Status & Notes
    </button>
