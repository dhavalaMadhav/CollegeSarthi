        // Show modal
        modal.classList.add('active');
    }
    
    function closeModal() {
        document.getElementById('leadModal').classList.remove('active');
    }
    
    async function updateLeadStatus() {
        if (!currentLead) return;
        
        const newStatus = document.getElementById('statusSelect').value;
        const notes = document.getElementById('notesTextarea').value;
        const updateBtn = document.querySelector('.update-btn');
        
        updateBtn.disabled = true;
        updateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
        
        try {
            const response = await fetch(`/api/admin/leads/${currentLead._id}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    status: newStatus,
                    notes: notes 
                })
            });
            
            const result = await response.json();
            
            if (result.success) {
                alert('‚úÖ Status updated successfully!');
                location.reload();
            } else {
                alert('‚ùå Error: ' + (result.message || 'Unknown error'));
                updateBtn.disabled = false;
                updateBtn.innerHTML = '<i class="fas fa-save"></i> Update Status & Notes';
            }
        } catch (error) {
            console.error('Update error:', error);
            alert('‚ùå Network error');
            updateBtn.disabled = false;
            updateBtn.innerHTML = '<i class="fas fa-save"></i> Update Status & Notes';
        }
    }
    
    function exportLeads() {
        const rows = document.querySelectorAll('#leadsTableBody tr');
        let csv = 'Date,Time,Name,Phone,Email,City,Stream,Course,Education,Year,Budget,Message,Source,Status\n';
        
        rows.forEach(row => {
            if (row.style.display !== 'none') {
                const cells = row.querySelectorAll('td');
                const dateTime = cells[0].textContent.trim().split('\n');
                const date = dateTime[0].trim();
                const time = dateTime[1] ? dateTime[1].trim() : '';
                const name = cells[1].textContent.trim();
                const phone = cells[2].textContent.trim();
                const email = cells[3].textContent.trim();
                const stream = cells[4].textContent.trim();
                const source = cells[5].textContent.trim();
                const status = cells[6].textContent.trim();
                
                csv += `"${date}","${time}","${name}","${phone}","${email}","","${stream}","","","","","","${source}","${status}"\n`;
            }
        });
        
        const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'UniPick-leads-' + new Date().toISOString().split('T')[0] + '.csv';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
    }

    // ESC to close
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
    });

    // Click outside to close
    document.getElementById('leadModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
