<script>
    let currentLead = null;
    
    function logout() {
        if (confirm('Are you sure you want to logout?')) {
            window.location.href = '/admin/logout';
        }
    }
    
    function filterLeads(status, event) {
        const rows = document.querySelectorAll('#leadsTableBody tr');
        const buttons = document.querySelectorAll('.filter-btn');
        
        buttons.forEach(btn => btn.classList.remove('active'));
        if (event) event.target.classList.add('active');
        
        rows.forEach(row => {
            if (status === 'all' || row.dataset.status === status) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    function searchLeads() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const rows = document.querySelectorAll('#leadsTableBody tr');
        
        rows.forEach(row => {
            const searchData = row.dataset.search;
            if (searchData.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }
    
    // MAIN VIEW FUNCTION
    function viewLead(lead) {
        currentLead = lead;
        const modal = document.getElementById('leadModal');
        const detailsDiv = document.getElementById('leadDetails');
        
        // Build universities list
        let universitiesHTML = '';
        if (lead.interestedUniversities && lead.interestedUniversities.length > 0) {
            universitiesHTML = `
                <div class="detail-row">
                    <div class="detail-label"><i class="fas fa-university"></i> Interested Universities:</div>
                    <div class="detail-value">
                        <ul class="universities-list">
                            ${lead.interestedUniversities.map(uni => `<li>${uni}</li>`).join('')}
                        </ul>
                    </div>
                </div>
            `;
        }
        
        // Recommended universities (from quiz)
        let recommendedHTML = '';
        if (lead.recommendedUniversities && lead.recommendedUniversities.length > 0) {
            recommendedHTML = `
                <div class="detail-row">
                    <div class="detail-label"><i class="fas fa-award"></i> Recommended (Quiz):</div>
                    <div class="detail-value">
                        <ul class="universities-list">
            `;
            lead.recommendedUniversities.forEach(uni => {
                if (uni.universityId && uni.universityId.name) {
                    recommendedHTML += `<li><strong>${uni.universityId.name}</strong> - ${uni.matchPercentage}% match</li>`;
                }
            });
            recommendedHTML += '</ul></div></div>';
        }
        
        // Quiz results
        let quizResultsHTML = '';
        if (lead.quizResults && lead.quizResults.stream) {
            quizResultsHTML = `
                <div class="detail-row">
                    <div class="detail-label"><i class="fas fa-chart-pie"></i> Quiz Results:</div>
                    <div class="detail-value" style="background: #e3f2fd; padding: 15px; border-left: 4px solid var(--primary);">
                        <strong>Stream:</strong> ${lead.quizResults.stream}<br>
                        <strong>Match:</strong> ${lead.quizResults.percentage || 0}%
                        ${lead.quizResults.recommendedUniversities ? `<br><strong>Unis:</strong> ${lead.quizResults.recommendedUniversities.join(', ')}` : ''}
                    </div>
                </div>
            `;
        }
        
