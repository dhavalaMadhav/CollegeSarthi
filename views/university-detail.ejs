<div class="university-detail-container">
    <!-- Hero Banner -->
    <div class="university-hero">
        <img src="<%= university.bannerImage || 'https://images.unsplash.com/photo-1562774053-701939374585?w=1920' %>" 
             alt="<%= university.name %>">
        <div class="type-badge"><%= university.type || 'Private' %> University</div>
        <div class="hero-overlay">
            <h1><%= university.name %></h1>
            <p><i class="fas fa-map-marker-alt"></i> <%= university.location %></p>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="stats-grid">
        <% if (university.established) { %>
        <div class="stat-box">
            <div class="stat-icon"><i class="fas fa-calendar-alt"></i></div>
            <div class="stat-value"><%= university.established %></div>
            <div class="stat-label">Established</div>
        </div>
        <% } %>
        
        <% if (university.students) { %>
        <div class="stat-box">
            <div class="stat-icon"><i class="fas fa-user-graduate"></i></div>
            <div class="stat-value"><%= university.students %></div>
            <div class="stat-label">Students</div>
        </div>
        <% } %>
        
        <% if (university.faculty) { %>
        <div class="stat-box">
            <div class="stat-icon"><i class="fas fa-chalkboard-teacher"></i></div>
            <div class="stat-value"><%= university.faculty %></div>
            <div class="stat-label">Faculty</div>
        </div>
        <% } %>
        
        <% if (university.campusSize) { %>
        <div class="stat-box">
            <div class="stat-icon"><i class="fas fa-university"></i></div>
            <div class="stat-value"><%= university.campusSize %></div>
            <div class="stat-label">Campus Size</div>
        </div>
        <% } %>
        
        <% if (university.placements && university.placements.percentage) { %>
        <div class="stat-box">
            <div class="stat-icon"><i class="fas fa-briefcase"></i></div>
            <div class="stat-value"><%= university.placements.percentage %>%</div>
            <div class="stat-label">Placement</div>
        </div>
        <% } %>
    </div>

    <!-- Content Section -->
    <div class="content-section">
        <div class="content-grid">
            <div class="main-content">
                <div class="section-box">
                    <h2><i class="fas fa-info-circle"></i> About University</h2>
                    <p style="font-size: 19px; line-height: 1.8; color: #555;">
                        <%= university.description || 'No description available.' %>
                    </p>
                </div>

                <% if (university.programs && university.programs.length > 0) { %>
                <div class="section-box">
                    <h2><i class="fas fa-graduation-cap"></i> Programs Offered</h2>
                    <div class="programs-grid">
                        <% university.programs.forEach(program => { %>
                        <div class="program-box">
                            <h4><%= program.name %></h4>
                            <% if (program.duration) { %>
                            <div class="program-detail">
                                <i class="fas fa-clock"></i>
                                <span><%= program.duration %></span>
                            </div>
                            <% } %>
                            <% if (program.eligibility) { %>
                            <div class="program-detail">
                                <i class="fas fa-check-circle"></i>
                                <span><%= program.eligibility %></span>
                            </div>
                            <% } %>
                            <% if (program.fees) { %>
                            <div class="program-detail">
                                <i class="fas fa-rupee-sign"></i>
                                <span><%= program.fees %></span>
                            </div>
                            <% } %>
                            <% if (program.seats) { %>
                            <div class="program-detail">
                                <i class="fas fa-users"></i>
                                <span><%= program.seats %> seats</span>
                            </div>
                            <% } %>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>

                <% if (university.facilities && university.facilities.length > 0) { %>
                <div class="section-box">
                    <h2><i class="fas fa-building"></i> Campus Facilities</h2>
                    <div class="facilities-grid">
                        <% university.facilities.forEach(facility => { %>
                        <div class="facility-box">
                            <i class="fas fa-check-circle"></i>
                            <span><%= facility %></span>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>
            </div>

            <div class="sidebar">
                <div class="info-box">
                    <h3><i class="fas fa-info-circle"></i> Quick Info</h3>
                    <% if (university.type) { %>
                    <div class="info-item">
                        <span class="info-label">Type</span>
                        <span class="info-value"><%= university.type %></span>
                    </div>
                    <% } %>
                    <% if (university.feeRange) { %>
                    <div class="info-item">
                        <span class="info-label">Fee Range</span>
                        <span class="info-value"><%= university.feeRange %></span>
                    </div>
                    <% } %>
                    <% if (university.students) { %>
                    <div class="info-item">
                        <span class="info-label">Total Students</span>
                        <span class="info-value"><%= university.students %></span>
                    </div>
                    <% } %>
                    <% if (university.campusSize) { %>
                    <div class="info-item">
                        <span class="info-label">Campus Size</span>
                        <span class="info-value"><%= university.campusSize %></span>
                    </div>
                    <% } %>
                </div>

                <% if (university.accreditation || university.ranking) { %>
                <div class="info-box">
                    <h3><i class="fas fa-award"></i> Recognition</h3>
                    <% if (university.accreditation) { %>
                    <p style="color: #555; line-height: 1.8; margin-bottom: 15px;">
                        <%= university.accreditation %>
                    </p>
                    <% } %>
                    <% if (university.ranking) { %>
                    <p style="color: #2c5282; font-weight: 700; font-size: 16px; margin-bottom: 20px;">
                        <%= university.ranking %>
                    </p>
                    <% } %>

