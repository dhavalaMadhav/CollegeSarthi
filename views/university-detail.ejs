<%- include('partials/header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>

<style>
    /* Main Container - Matching Homepage */
    .university-detail-container {
        width: 90%;
        margin: 100px auto 0;
        border-left: 2px solid #000000;
        border-right: 2px solid #000000;
        background-color: #ffffff;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    }

    /* Hero Banner */
    .university-hero {
        width: 100%;
        height: 500px;
        position: relative;
        overflow: hidden;
    }

    .university-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(26, 54, 93, 0.95), transparent);
        padding: 60px;
        color: white;
    }

    .hero-overlay h1 {
        font-size: 56px;
        font-weight: 800;
        margin-bottom: 15px;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
    }

    .hero-overlay p {
        font-size: 22px;
        opacity: 0.95;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .type-badge {
        position: absolute;
        top: 30px;
        right: 30px;
        background: #ffffff;
        color: #1a365d;
        padding: 12px 25px;
        border-radius: 0;
        font-weight: 700;
        font-size: 16px;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
        border: 2px solid #000;
    }

    /* Stats Grid - Redesigned with Transparent Border Initially */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0;
        padding: 0;
        background-color: #ffffff;
    }

    .stat-box {
        background: #ffffff;
        padding: 50px 30px;
        text-align: center;
        border: 2px solid transparent;
        box-shadow: none;
        transition: all 0.4s ease;
        position: relative;
    }

    .stat-box::after {
        content: '';
        position: absolute;
        right: 0;
        top: 20%;
        height: 60%;
        width: 1px;
        background: #e8e8e8;
    }

    .stat-box:last-child::after {
        display: none;
    }

    .stat-box:hover {
        background: #f8f9fa;
        border: 2px solid #2c5282;
        box-shadow: 8px 8px 0 rgba(44, 82, 130, 0.15);
        transform: translate(-2px, -2px);
    }

    .stat-icon {
        font-size: 48px;
        color: #2c5282;
        margin-bottom: 20px;
        transition: all 0.3s;
    }

    .stat-box:hover .stat-icon {
        transform: scale(1.15);
        color: #1a365d;
    }

    .stat-value {
        font-size: 42px;
        font-weight: 900;
        color: #1a365d;
        margin-bottom: 12px;
        line-height: 1;
    }

    .stat-label {
        font-size: 15px;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.2px;
    }

    /* Content Section */
    .content-section {
        padding: 80px 60px;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 50px;
    }

    /* Section Cards - Box Style */
    .section-box {
        background: #ffffff;
        padding: 50px;
        margin-bottom: 40px;
        box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.08);
        border: 1px solid #eaeaea;
        transition: all 0.3s;
    }

    .section-box:hover {
        transform: translate(-3px, -3px);
        box-shadow: 9px 9px 0 rgba(0, 0, 0, 0.12);
    }

    .section-box h2 {
        font-size: 36px;
        color: #1a365d;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #2c5282;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .section-box h2 i {
        font-size: 32px;
        color: #2c5282;
    }

    /* Programs Grid - Box Style */
    .programs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .program-box {
        background: #f8f9fa;
        padding: 30px;
        border-left: 4px solid #2c5282;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.08);
        transition: all 0.3s;
        cursor: pointer;
    }

    .program-box:hover {
        transform: translate(-3px, -3px);
        box-shadow: 7px 7px 0 rgba(44, 82, 130, 0.2);
        border-left-width: 6px;
    }

    .program-box h4 {
        font-size: 20px;
        color: #1a365d;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .program-detail {
        display: flex;
        align-items: center;
        gap: 12px;
        margin: 12px 0;
        font-size: 16px;
        color: #555;
    }

    .program-detail i {
        color: #2c5282;
        font-size: 16px;
        width: 20px;
    }

    /* Facilities Grid */
    .facilities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .facility-box {
        background: #f0f7ff;
        padding: 20px 25px;
        display: flex;
        align-items: center;
        gap: 15px;
        font-size: 16px;
        font-weight: 600;
        box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
        cursor: pointer;
    }

    .facility-box:hover {
        transform: translate(-2px, -2px);
        box-shadow: 5px 5px 0 rgba(44, 82, 130, 0.15);
    }

    .facility-box i {
        color: #2c5282;
        font-size: 22px;
    }

    /* ========================================
   CENTERED TITLE WITH RING UNDERLINE
   (Same style as homepage)
======================================== */

/* Applies to all centered h2 titles */
.placements-header h2,
.gallery-header h2,
.video-header h2,
.map-header h2 {
    font-size: 48px;
    color: #1a365d;
    font-weight: 800;
    margin-bottom: 20px;
    position: relative;
    display: inline-block;
    padding-bottom: 50px;
}

/* Line underneath (breaks around ring) */
.placements-header h2::after,
.gallery-header h2::after,
.video-header h2::after,
.map-header h2::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: #2c5282;
    bottom: 15px;
    left: 0;
    z-index: 1;
}

/* Ring circle (breaks the line) */
.placements-header h2::before,
.gallery-header h2::before,
.video-header h2::before,
.map-header h2::before {
    content: '';
    position: absolute;
    width: 36px;
    height: 36px;
    background: white; /* Match background color of section */
    border: 4px solid #2c5282;
    border-radius: 50%;
    bottom: -3px; /* Center on line */
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 10px rgba(44, 82, 130, 0.08);
}

/* Specific background colors for rings to match section */
.placements-header h2::before {
    background: #f8f9fa; /* Placements section background */
}

.gallery-header h2::before {
    background: #e3f2fd; /* Gallery section background */
}

.video-header h2::before {
    background: #f8f9fa; /* Video section background */
}

.map-header h2::before {
    background: #ffffff; /* Map section background */
}


    /* Full Width Placements Section */
    .placements-section-full {
        width: 100%;
        padding: 80px 0;
        background: #f8f9fa;
        margin: 60px 0;
        border-top: 2px solid #000000;
        border-bottom: 2px solid #000000;
    }

    .placements-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 60px;
    }

    .placements-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .placements-header h2 {
        font-size: 48px;
        color: #1a365d;
        font-weight: 800;
        margin-bottom: 20px;
    }

    /* Placement Stats Box */
    .placement-box {
        background: #1a1a1a;
        padding: 60px;
        margin-bottom: 60px;
        color: white;
        box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.08);
    }

    .placement-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        text-align: center;
    }

    .placement-number {
        font-size: 56px;
        font-weight: 900;
        margin-bottom: 10px;
    }

    .placement-label {
        font-size: 18px;
        opacity: 0.9;
        font-weight: 600;
    }

    /* Infinite Scrolling Companies */
    .companies-scroll-container {
        width: 100%;
        overflow: hidden;
        background: #ffffff;
        padding: 40px 0;
        position: relative;
    }

    .companies-scroll-wrapper {
        display: flex;
        animation: scroll-left 30s linear infinite;
        width: fit-content;
    }

    .companies-scroll-wrapper:hover {
        animation-play-state: paused;
    }

    .company-item {
        min-width: 200px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 30px;
        font-size: 24px;
        font-weight: 700;
        color: #2c5282;
        background: #f8f9fa;
        padding: 20px 30px;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.08);
        border: 1px solid #eaeaea;
        transition: all 0.3s;
    }

    .company-item:hover {
        transform: translateY(-5px);
        box-shadow: 6px 6px 0 rgba(44, 82, 130, 0.2);
        border-color: #2c5282;
    }

    @keyframes scroll-left {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    /* Photo Gallery Section */
    .gallery-section {
        width: 100%;
        padding: 80px 0;
        background: #e3f2fd;
        margin: 60px 0;
    }

    .gallery-inner {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 60px;
    }

    .gallery-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .gallery-header h2 {
        font-size: 48px;
        color: #1a365d;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .gallery-carousel {
        position: relative;
        overflow: hidden;
    }

    .gallery-slides-container {
        display: flex;
        transition: transform 0.5s ease;
    }

    .gallery-slide {
        min-width: 100%;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, 1fr);
        background: transparent;
    }

    .gallery-cell {
        aspect-ratio: 16 / 10;
        overflow: hidden;
        cursor: pointer;
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s;
    }

    .gallery-cell:hover {
        transform: scale(0.98);
        z-index: 10;
    }

    .gallery-cell img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .gallery-cell:hover img {
        transform: scale(1.1);
    }

    .gallery-nav-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;
        background: #2c5282;
        color: white;
        border: none;
        cursor: pointer;
        z-index: 100;
        font-size: 24px;
        transition: all 0.3s;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
    }

    .gallery-nav-btn:hover {
        background: #1a365d;
        transform: translateY(-50%) scale(1.1);
    }

    .gallery-prev {
        left: 20px;
    }

    .gallery-next {
        right: 20px;
    }

    .gallery-dots {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .gallery-dot {
        width: 12px;
        height: 12px;
        background: rgba(44, 82, 130, 0.3);
        cursor: pointer;
        transition: all 0.3s;
    }

    .gallery-dot.active {
        width: 40px;
        background: #2c5282;
    }

    /* Image Modal/Lightbox */
    .image-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.95);
        z-index: 10000;
        justify-content: center;
        align-items: center;
    }

    .image-modal.active {
        display: flex;
    }

    .modal-content {
        max-width: 90%;
        max-height: 90%;
        position: relative;
    }

    .modal-content img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .modal-close {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 50px;
        height: 50px;
        background: #ffffff;
        color: #000;
        border: none;
        cursor: pointer;
        font-size: 32px;
        font-weight: 700;
        z-index: 10001;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
    }

    .modal-close:hover {
        background: #f0f0f0;
    }

    /* Video Section */
    .video-section {
        width: 100%;
        padding: 80px 0;
        background: #f8f9fa;
    }

    .video-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 60px;
    }

    .video-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .video-header h2 {
        font-size: 48px;
        color: #1a365d;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .video-container {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        background: #000;
        box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.1);
        border: 2px solid #000;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Sidebar Boxes */
    .sidebar {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .info-box {
        background: #ffffff;
        padding: 35px;
        box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.1);
        border: 1px solid #eaeaea;
        margin-bottom: 30px;
        transition: all 0.3s;
    }

    .info-box:hover {
        transform: translate(-3px, -3px);
        box-shadow: 9px 9px 0 rgba(0, 0, 0, 0.15);
    }

    .info-box h3 {
        font-size: 22px;
        color: #1a365d;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e0e0e0;
        font-weight: 700;
    }

    .info-item {
        padding: 18px 0;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        color: #666;
        font-weight: 600;
        font-size: 15px;
    }

    .info-value {
        color: #2c5282;
        font-weight: 700;
        font-size: 15px;
    }

    /* Sidebar Charts */
    .sidebar-charts {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .chart-box {
        background: #ffffff;
        padding: 20px;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.08);
        border: 1px solid #eaeaea;
    }

    .chart-box canvas {
        width: 100%;
        max-height: 220px;
    }

    .chart-title {
        font-size: 16px;
        font-weight: 700;
        color: #1a365d;
        margin-bottom: 12px;
        text-align: center;
        padding-bottom: 10px;
        border-bottom: 2px solid #f0f0f0;
    }

    /* Centered Apply Button at Bottom */
    .apply-section-bottom {
        padding: 80px 60px;
        text-align: center;
        background-color: #f8f9fa;
        border-top: 2px solid #000000;
    }

    .apply-cta-title {
        font-size: 42px;
        color: #1a365d;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .apply-cta-subtitle {
        font-size: 20px;
        color: #555;
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
    }

    .apply-button-large {
        display: inline-block;
        padding: 25px 60px;
        background: #e6f2ff;
        color: #1a365d;
        text-decoration: none;
        font-weight: 700;
        font-size: 22px;
        border: 3px solid #2c5282;
        cursor: pointer;
        box-shadow: 6px 6px 0 #2c5282;
        transition: all 0.3s;
    }

    .apply-button-large:hover {
        background: #2c5282;
        color: white;
        transform: translate(-3px, -3px);
        box-shadow: 9px 9px 0 #1a365d;
    }

    .apply-button-large i {
        margin-right: 12px;
        font-size: 24px;
    }

    /* Map Section - Full Width */
.map-section-full {
    width: 100%;
    padding: 80px 0;
    background: #ffffff;
    border-top: 2px solid #000000;
}

.map-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
}

.map-header {
    text-align: center;
    margin-bottom: 50px;
}

.map-header h2 {
    font-size: 48px;
    color: #1a365d;
    font-weight: 800;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
}

.map-header h2 i {
    font-size: 42px;
    color: #2c5282;
}

/* Distance Calculator Box */
.distance-calculator-box {
    background: #f0f7ff;
    padding: 40px;
    margin-bottom: 40px;
    border-left: 6px solid #2c5282;
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.08);
}

.distance-calculator-box h3 {
    font-size: 26px;
    color: #1a365d;
    margin-bottom: 25px;
    font-weight: 700;
}

.calculator-inputs {
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
}

.calculator-inputs input {
    flex: 1;
    padding: 18px 25px;
    font-size: 18px;
    border: 2px solid #e0e0e0;
    transition: all 0.3s;
}

.calculator-inputs input:focus {
    outline: none;
    border-color: #2c5282;
    box-shadow: 4px 4px 0 rgba(44, 82, 130, 0.1);
}

.btn-calculate {
    padding: 18px 35px;
    background: #2c5282;
    color: white;
    border: none;
    font-size: 18px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.15);
}

.btn-calculate:hover {
    background: #1a365d;
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.2);
}

.btn-calculate i {
    margin-right: 10px;
}

.distance-result-box {
    display: none;
    padding: 30px;
    background: white;
    border: 3px solid #2c5282;
    margin-top: 25px;
    box-shadow: 6px 6px 0 rgba(44, 82, 130, 0.15);
}

.distance-result-box.active {
    display: block;
}

.distance-info {
    display: flex;
    align-items: center;
    gap: 30px;
    margin-bottom: 25px;
    padding-bottom: 25px;
    border-bottom: 2px solid #f0f0f0;
}

.distance-number {
    font-size: 64px;
    font-weight: 900;
    color: #2c5282;
    line-height: 1;
}

.distance-text h4 {
    font-size: 24px;
    color: #1a365d;
    margin-bottom: 8px;
    font-weight: 700;
}

.distance-text p {
    font-size: 16px;
    color: #666;
    margin: 0;
}

.travel-time {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 20px;
}

.travel-option {
    padding: 25px;
    background: #f8f9fa;
    text-align: center;
    border: 2px solid #e0e0e0;
    transition: all 0.3s;
}

.travel-option:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 rgba(44, 82, 130, 0.15);
    border-color: #2c5282;
}

.travel-option i {
    font-size: 32px;
    color: #2c5282;
    margin-bottom: 12px;
}

.travel-option .time {
    font-size: 22px;
    font-weight: 700;
    color: #1a365d;
    margin-bottom: 5px;
}

.travel-option .label {
    font-size: 15px;
    color: #666;
    font-weight: 600;
}

/* Map Display */
/* Map Display */
.university-detail-map {
    width: 100%;
    height: 550px;
    background: #f0f0f0;
    box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.08);
    border: 2px solid #e0e0e0;
    margin-bottom: 40px;
    position: relative;
    z-index: 1;
}

/* Fix Leaflet Container */
.university-detail-map .leaflet-container {
    height: 100%;
    width: 100%;
}


/* Address Info Box */
.address-info-box {
    background: white;
    padding: 40px;
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.08);
    border: 1px solid #eaeaea;
}

.address-info-box h4 {
    font-size: 26px;
    color: #1a365d;
    margin-bottom: 20px;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 12px;
}

.address-info-box h4 i {
    color: #2c5282;
}

.address-text {
    font-size: 20px;
    color: #555;
    margin-bottom: 30px;
    line-height: 1.6;
}

.map-actions-buttons {
    display: flex;
    gap: 20px;
}

.btn-map-action {
    flex: 1;
    padding: 18px 30px;
    background: #f8f9fa;
    color: #1a365d;
    border: 2px solid #2c5282;
    font-size: 18px;
