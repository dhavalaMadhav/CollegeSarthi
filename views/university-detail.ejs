<%- include('partials/header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<style>
    /* ========================================
       UNIVERSITY DETAIL PAGE - SWISS DESIGN SYSTEM
       ======================================== */

    :root {
        --card-pink: #ffd1dc;        /* light premium pink [web:58][web:76] */
        --card-pink-dark: #ffb5c0;   /* darker pink for clip-path & shadow */
    }

    .university-detail-container {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Hero Banner */
    .university-hero {
        width: 100%;
        height: 400px;
        position: relative;
        overflow: hidden;
        border-bottom: 2px solid var(--black);
    }

    .university-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        padding: 60px;
        color: var(--white);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, transparent 100%);
    }

    .hero-overlay h1 {
        font-size: 3.5rem;
        font-weight: var(--font-weight-black);
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        line-height: 1.1;
        position: relative;
        display: inline-block;
        padding-bottom: 40px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .hero-overlay h1::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        background: var(--white);
        bottom: 15px;
        left: 0;
        z-index: 1;
    }

    .hero-overlay h1::before {
        content: '';
        position: absolute;
        width: 28px;
        height: 28px;
        background: var(--primary);
        border: 3px solid var(--white);
        border-radius: 50%;
        bottom: -2px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        box-shadow: 0 0 0 8px rgba(255, 255, 255, 0.2);
    }

    .hero-overlay p {
        font-size: 1.25rem;
        font-weight: var(--font-weight-medium);
        display: flex;
        align-items: center;
        gap: 10px;
        opacity: 0.95;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

    .type-badge {
        position: absolute;
        top: 30px;
        right: 30px;
        background: var(--white);
        color: var(--black);
        padding: 12px 25px;
        border: 2px solid var(--black);
        font-weight: var(--font-weight-bold);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        box-shadow: 4px 4px 0px 0px var(--black);
        z-index: 10;
    }

    /* Stats Grid */
    .stats-grid {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0;
        padding: 0;
        background: var(--white);
        border-bottom: 2px solid var(--gray-300);
    }

    .stat-box {
        background: var(--white);
        padding: 50px 30px;
        text-align: center;
        border: 2px solid transparent;
        transition: all 0.3s ease;
        position: relative;
        border-right: 1px solid var(--gray-200);
        border-bottom: 1px solid var(--gray-200);
    }

    .stat-box:last-child {
        border-right: none;
    }

    .stat-box:hover {
        background: var(--gray-50);
        border: 2px solid var(--primary);
        box-shadow: 6px 6px 0px 0px var(--primary);
        transform: translate(-2px, -2px);
        z-index: 2;
    }

    .stat-icon {
        font-size: 3rem;
        color: var(--primary);
        margin-bottom: 20px;
        transition: all 0.3s;
    }

    .stat-value {
        font-size: 3rem;
        font-weight: var(--font-weight-black);
        color: var(--black);
        margin-bottom: 10px;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--gray-700);
        font-weight: var(--font-weight-bold);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    /* Content Section */
    .content-section {
        width: 100%;
        padding: 80px 40px;
        background: var(--white);
    }

    .content-grid {
        width: 100%;
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 50px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-box {
        background: var(--white);
        padding: 50px;
        margin-bottom: 40px;
        border: 2px solid var(--gray-300);
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .section-box:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        border-color: var(--primary-light);
    }

    .section-box h2 {
        font-size: 2rem;
        color: var(--black);
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid var(--primary);
        font-weight: var(--font-weight-bold);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .section-box h2 i {
        font-size: 1.75rem;
        color: var(--primary);
    }

    .programs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .program-box {
        background: var(--gray-50);
        padding: 30px;
        border-left: 4px solid var(--primary);
        border: 2px solid var(--gray-300);
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .program-box:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 85, 255, 0.15);
        border-color: var(--primary);
        border-left-width: 6px;
    }

    .program-box h4 {
        font-size: 1.25rem;
        color: var(--black);
        margin-bottom: 20px;
        font-weight: var(--font-weight-bold);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .program-detail {
        display: flex;
        align-items: center;
        gap: 12px;
        margin: 12px 0;
        font-size: 0.875rem;
        color: var(--gray-700);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: var(--font-weight-medium);
    }

    .program-detail i {
        color: var(--primary);
        font-size: 0.875rem;
        width: 20px;
        text-align: center;
    }

    .facilities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .facility-box {
        background: var(--white);
        padding: 20px 25px;
        display: flex;
        align-items: center;
        gap: 15px;
        font-size: 0.875rem;
        font-weight: var(--font-weight-semibold);
        border: 2px solid var(--gray-300);
        transition: all 0.3s ease;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .facility-box:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 85, 255, 0.15);
        border-color: var(--primary);
        background: var(--primary-light);
    }

    .facility-box i {
        color: var(--primary);
        font-size: 1.125rem;
    }

    /* Section Headers */
    .placements-header h2,
    .gallery-header h2,
    .video-header h2,
    .map-header h2 {
        font-size: 2.5rem;
        color: var(--white);
        font-weight: var(--font-weight-black);
        margin-bottom: 20px;
        position: relative;
        display: inline-block;
        padding-bottom: 50px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-align: center;
        width: 100%;
    }

    .placements-header h2::after,
    .gallery-header h2::after,
    .video-header h2::after,
    .map-header h2::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        background: var(--primary);
        bottom: 15px;
        left: 0;
        z-index: 1;
    }

    .placements-header h2::before,
    .gallery-header h2::before,
    .video-header h2::before,
    .map-header h2::before {
        content: '';
        position: absolute;
        width: 36px;
        height: 36px;
        background: #000;
        border: 3px solid var(--primary);
        border-radius: 50%;
        bottom: -3px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        box-shadow: 0 0 0 10px rgba(0, 85, 255, 0.2);
    }

    /* Placements Section – white */
    .placements-section-full {
        width: 100%;
        padding: 80px 40px;
        background: var(--gray-50);
        margin: 60px 0;
        border-top: 2px solid var(--black);
        border-bottom: 2px solid var(--black);
    }

    .placements-inner {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        color: #1a202c;
    }

    .placements-header {
        text-align: center;
        margin-bottom: 60px;
        color: #1a202c;
    }

    .placements-header h2 {
        color: #1a202c;
    }

    .placements-header h2::before {
        background: #fff;
    }

    .placement-box {
        background: var(--black);
        padding: 60px;
        margin-bottom: 60px;
        color: var(--white);
        border: 2px solid var(--primary);
        box-shadow: 8px 8px 0px 0px var(--primary);
    }

    .placement-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        text-align: center;
    }

    .placement-number {
        font-size: 3.5rem;
        font-weight: var(--font-weight-black);
        margin-bottom: 10px;
        line-height: 1;
        color: var(--primary-light);
    }

    .placement-label {
        font-size: 1rem;
        opacity: 0.9;
        font-weight: var(--font-weight-semibold);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .companies-scroll-container {
        width: 100%;
        overflow: hidden;
        background: var(--white);
        padding: 40px 0;
        position: relative;
        border: 2px solid var(--gray-300);
    }

    .companies-scroll-wrapper {
        display: flex;
        animation: scroll-left 30s linear infinite;
        width: fit-content;
    }

    .companies-scroll-wrapper:hover {
        animation-play-state: paused;
    }

    .company-item {
        min-width: 200px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 30px;
        font-size: 1.25rem;
        font-weight: var(--font-weight-bold);
        color: var(--primary);
        background: var(--white);
        padding: 20px 30px;
        border: 2px solid var(--primary);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .company-item:hover {
        transform: translateY(-4px);
        box-shadow: 6px 6px 0px 0px var(--primary);
        background: var(--primary-light);
    }

    @keyframes scroll-left {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }

    /* Gallery Section */
    .gallery-section {
        width: 100%;
        padding: 80px 40px 40px;
        background: #000;
        margin: 60px 0 0 0; /* touches tour section */
        border-top: 2px solid var(--gray-800);
        border-bottom: none;
    }

    .gallery-inner {
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
    }

    .gallery-header {
        text-align: center;
        margin-bottom: 50px;
        color: #fff;
    }

    .gallery-carousel {
        position: relative;
        overflow: hidden;
        border: none;
        background: #000;
    }

    .gallery-slides-container {
        display: flex;
        transition: transform 0.5s ease;
    }

    .gallery-slide {
        min-width: 100%;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, 1fr);
        background: #000;
        padding: 20px;
        gap: 20px;
    }

    .gallery-cell {
        aspect-ratio: 16 / 10;
        overflow: hidden;
        cursor: pointer;
        position: relative;
        border: none;
        transition: all 0.3s ease;
    }

    .gallery-cell:hover {
        transform: scale(0.98);
        z-index: 10;
    }

    .gallery-cell img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .gallery-cell:hover img {
        transform: scale(1.1);
    }

    .gallery-nav-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;
        background: var(--primary);
        color: var(--white);
        border: 2px solid var(--primary-dark);
        cursor: pointer;
        z-index: 100;
        font-size: 1.25rem;
        transition: all 0.3s ease;
        box-shadow: 4px 4px 0px 0px var(--primary-dark);
    }

    .gallery-nav-btn:hover {
        background: var(--primary-dark);
        transform: translateY(-50%) scale(1.1);
    }

    .gallery-prev { left: 20px; }
    .gallery-next { right: 20px; }

    .gallery-dots {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .gallery-dot {
        width: 12px;
        height: 12px;
        background: var(--gray-600);
        cursor: pointer;
        transition: all 0.3s;
        border: 2px solid var(--gray-700);
    }

    .gallery-dot.active {
        width: 40px;
        background: var(--primary);
        border-color: var(--primary-dark);
    }

    .image-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.95);
        z-index: 10000;
        justify-content: center;
        align-items: center;
    }

    .image-modal.active {
        display: flex;
    }

    .modal-content {
        max-width: 90%;
        max-height: 90%;
        position: relative;
        border: 2px solid var(--white);
        box-shadow: 8px 8px 0px 0px rgba(255, 255, 255, 0.3);
    }

    .modal-content img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .modal-close {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 50px;
        height: 50px;
        background: var(--white);
        color: var(--black);
        border: 2px solid var(--black);
        cursor: pointer;
        font-size: 2rem;
        font-weight: var(--font-weight-bold);
        z-index: 10001;
        box-shadow: 4px 4px 0px 0px var(--black);
        text-transform: uppercase;
    }

    .modal-close:hover {
        background: var(--gray-100);
        transform: translate(-2px, -2px);
    }

    /* Video Section (tour) – directly after gallery, no gap */
    .video-section {
        width: 100%;
        padding: 0 40px 80px;
        background: #000;
        border-top: none;
        border-bottom: 2px solid var(--gray-800);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .video-inner {
        width: 100%;
        max-width: 900px;
        margin: 40px auto 0;
        position: relative;
        z-index: 2;
    }

    .video-header {
        text-align: center;
        margin-bottom: 40px;
        color: #fff;
    }

    .video-header h2 {
        color: #fff;
    }

    .video-container-wrapper {
        position: relative;
        width: 100%;
        padding-bottom: 50%;
        background: #000;
        border: none;
        box-shadow: none;
        overflow: visible;
        margin: 0 auto;
    }

    .video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .video-container iframe {
        width: 100%;
        height: 100%;
        border: none;
        box-shadow: none;
    }

    .video-overlay-images {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 2;
        opacity: 1;
    }

    .overlay-image {
        position: absolute;
        width: 260px;
        height: 190px;
        border: none;
        box-shadow: none;
        object-fit: cover;
        transition: transform 0.1s linear;
        opacity: 1;
        z-index: 2;
        will-change: transform;
    }

    /* Left cluster */
    .overlay-image:nth-child(1) { top: 8%; left: 6%; }
    .overlay-image:nth-child(2) { bottom: 12%; left: 10%; }
    .overlay-image:nth-child(3) { top: 48%; left: 3%; transform: translateY(-50%); }

    /* Right cluster */
    .overlay-image:nth-child(4) { top: 6%; right: 8%; }
    .overlay-image:nth-child(5) { top: 36%; right: 3%; transform: translateY(-50%); }
    .overlay-image:nth-child(6) { bottom: 34%; right: 11%; transform: translateY(50%); }
    .overlay-image:nth-child(7) { bottom: 8%; right: 6%; }

    /* Center highlight */
    .overlay-image:nth-child(8) {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .sidebar {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .info-box {
        background: var(--white);
        padding: 35px;
        border: 2px solid var(--gray-300);
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .info-box:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        border-color: var(--primary);
    }

    .info-box h3 {
        font-size: 1.25rem;
        color: var(--black);
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--primary);
        font-weight: var(--font-weight-bold);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .info-item {
        padding: 18px 0;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        color: var(--gray-700);
        font-weight: var(--font-weight-semibold);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .info-value {
        color: var(--primary);
        font-weight: var(--font-weight-bold);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .sidebar-charts {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .chart-box {
        background: var(--white);
        padding: 20px;
        border: 2px solid var(--gray-300);
        transition: all 0.3s ease;
    }

    .chart-box:hover {
        border-color: var(--primary);
        box-shadow: 0 4px 12px rgba(0, 85, 255, 0.15);
    }

    .chart-box canvas {
        width: 100%;
        max-height: 220px;
    }

    .chart-title {
        font-size: 0.875rem;
        font-weight: var(--font-weight-bold);
        color: var(--black);
        margin-bottom: 12px;
        text-align: center;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--gray-200);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .apply-section-bottom {
        width: 100%;
        padding: 80px 40px;
        text-align: center;
        background: var(--primary);
        border-top: 2px solid var(--black);
        border-bottom: 2px solid var(--black);
    }

    .apply-cta-title {
        font-size: 2.5rem;
        color: var(--white);
        font-weight: var(--font-weight-black);
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        position: relative;
        display: inline-block;
        padding-bottom: 40px;
    }

    .apply-cta-title::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        background: var(--white);
        bottom: 15px;
        left: 0;
        z-index: 1;
    }

    .apply-cta-title::before {
        content: '';
        position: absolute;
        width: 28px;
        height: 28px;
        background: var(--primary);
        border: 3px solid var(--white);
        bottom: -2px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        box-shadow: 0 0 0 8px rgba(255, 255, 255, 0.2);
    }

    .apply-cta-subtitle {
        font-size: 1.125rem;
        color: var(--white);
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
        opacity: 0.9;
    }

    .apply-button-large {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 25px 60px;
        background: var(--white);
        color: var(--primary);
        text-decoration: none;
        font-weight: var(--font-weight-bold);
        font-size: 1.125rem;
        border: 2px solid var(--white);
        cursor: pointer;
        box-shadow: 6px 6px 0px 0px var(--white);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .apply-button-large:hover {
        background: var(--primary-dark);
        color: var(--white);
        transform: translate(-2px, -2px);
        box-shadow: 8px 8px 0px 0px var(--white);
        text-decoration: none;
    }

    .apply-button-large i {
        font-size: 1.5rem;
    }

    /* MAP / PINK SECTIONS: consistent pink background, dark-pink shadow & clip-path accent */
    .map-section-full {
        width: 100%;
        padding: 80px 40px;
        background: #000;
        border-top: 2px solid var(--gray-800);
    }

    .map-inner {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .map-header {
        text-align: center;
        margin-bottom: 50px;
