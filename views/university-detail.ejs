        const programCounts = {};
        <% university.programmes.forEach(program => { %>
            programCounts['<%= program %>'] = (programCounts['<%= program %>'] || 0) + 1;
        <% }) %>
        
        const programDetails = {
            'engineering': 'Engineering',
            'management': 'Management',
            'computer': 'Computer Science',
            'law': 'Law',
            'medical': 'Medical',
            'sciences': 'Sciences',
            'arts': 'Arts',
            'architecture': 'Architecture',
            'pharmacy': 'Pharmacy',
            'design': 'Design',
            'education': 'Education',
            'commerce': 'Commerce',
            'dental': 'Dental'
        };
        
        const labels = Object.keys(programCounts).map(code => programDetails[code] || code);
        const data = Object.values(programCounts);
        
        new Chart(programsCtx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: [
                        '#2C5F8D', '#4299e1', '#3182ce', '#5a67d8', '#667eea',
                        '#764ba2', '#9f7aea', '#805ad5', '#6b46c1', '#553c9a',
                        '#44337a', '#322659', '#1a202c'
                    ],
                    borderWidth: 3,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { 
                            padding: 10, 
                            font: { 
                                size: window.innerWidth <= 768 ? 10 : 11, 
                                weight: 'bold' 
                            },
                            usePointStyle: true
                        }
                    }
                }
            }
        });
    }
    <% } %>

    const facultyCtx = document.getElementById('facultyChart');
    if (facultyCtx) {
        new Chart(facultyCtx, {
            type: 'doughnut',
            data: {
                labels: ['Professors', 'Associate Professors', 'Assistant Professors', 'Visiting Faculty'],
                datasets: [{
                    data: [40, 30, 20, 10],
                    backgroundColor: ['#2C5F8D', '#4299e1', '#3182ce', '#5a67d8'],
                    borderWidth: 3,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { 
                            padding: 8, 
                            font: { 
                                size: window.innerWidth <= 768 ? 9 : 10, 
                                weight: 'bold' 
                            }
                        }
                    }
                }
            }
        });
    }

    const growthCtx = document.getElementById('growthChart');
    if (growthCtx) {
        new Chart(growthCtx, {
            type: 'line',
            data: {
                labels: ['2019', '2020', '2021', '2022', '2023', '2024'],
                datasets: [{
                    label: 'Students',
                    data: [800, 950, 1200, 1500, 1800, 2100],
                    borderColor: '#2C5F8D',
                    backgroundColor: 'rgba(44, 95, 141, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { 
                        beginAtZero: true,
                        ticks: {
                            font: {
                                size: window.innerWidth <= 768 ? 10 : 12
                            }
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: window.innerWidth <= 768 ? 10 : 12
                            }
                        }
                    }
                }
            }
        });
    }
});
</script>

