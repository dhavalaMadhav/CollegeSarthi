};

let map;
let universityMarker;
let userMarker;
let routeLine;

// VIDEO SECTION SCROLL-LINKED ANIMATION
let videoSectionElement;
let overlayImages = [];

function initVideoScrollAnimation() {
    videoSectionElement = document.getElementById('videoSection');
    if (!videoSectionElement) return;

    overlayImages = Array.from(
        videoSectionElement.querySelectorAll('.overlay-image')
    );

    window.addEventListener('scroll', onVideoScroll, { passive: true });
    onVideoScroll();
}

let videoScrollRafId = null;
function onVideoScroll() {
    if (videoScrollRafId) return;
    videoScrollRafId = window.requestAnimationFrame(() => {
        updateVideoAnimation();
        videoScrollRafId = null;
    });
}

function updateVideoAnimation() {
    if (!videoSectionElement || overlayImages.length === 0) return;

    const rect = videoSectionElement.getBoundingClientRect();
    const windowHeight = window.innerHeight;

    if (rect.bottom <= 0 || rect.top >= windowHeight) {
        return;
    }

    const sectionCenter = rect.top + rect.height / 2;
    const viewportCenter = windowHeight / 2;

    let t = (viewportCenter - sectionCenter) / windowHeight + 0.5;
    t = Math.max(0, Math.min(1, t));

    let edgeProgress = 0;
    if (t <= 0.5) {
        edgeProgress = t / 0.5;
    } else {
        edgeProgress = 1;
    }

    overlayImages.forEach((img, index) => {
        let baseX = 0;
        let baseY = 0;

        switch (index) {
            case 0: baseX = -20; baseY = -30; break;
            case 1: baseX = -10; baseY =  30; break;
            case 2: baseX = -25; baseY =   0; break;
            case 3: baseX =  25; baseY = -25; break;
            case 4: baseX =  30; baseY =   0; break;
            case 5: baseX =  25; baseY =  25; break;
            case 6: baseX =  15; baseY =  35; break;
            case 7: baseX =   0; baseY =   0; break;
        }

        const maxOffset = 140;

        let offsetX = 0;
        let offsetY = 0;

        if (index === 0 || index === 1 || index === 2) {
            offsetX = -maxOffset * edgeProgress;
        }
        if (index === 3 || index === 4 || index === 5 || index === 6) {
            offsetX =  maxOffset * edgeProgress;
        }

        if (index === 0 || index === 3) {
            offsetY = -maxOffset * edgeProgress;
        }
        if (index === 1 || index === 5 || index === 6) {
            offsetY =  maxOffset * edgeProgress;
        }

        if (index === 2 || index === 4) {
            offsetY = 0;
        }

        if (index === 7) {
            offsetX = 0;
            offsetY = 0;
        }

        const scale = 1 + 0.08 * edgeProgress;

        img.style.transform =
            `translate(${baseX + offsetX}px, ${baseY + offsetY}px) scale(${scale})`;
    });
}

// MAP FUNCTIONS
function initUniversityMap() {
    const mapElement = document.getElementById('universityDetailMap');
    if (!mapElement) return;
    if (!universityData || !universityData.lat || !universityData.lng) return;

    try {
        map = L.map('universityDetailMap').setView([universityData.lat, universityData.lng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors',
            maxZoom: 18
        }).addTo(map);

        const universityIcon = L.divIcon({
            className: 'university-marker',
            html: `
                <div class="university-marker-pin">
                    <i class="fas fa-university"></i>
                </div>
                <div class="university-marker-label">${universityData.name}</div>
            `,
            iconSize: [50, 50],
            iconAnchor: [25, 50],
            popupAnchor: [0, -50]
        });

        universityMarker = L.marker([universityData.lat, universityData.lng], { icon: universityIcon })
            .addTo(map)
            .bindPopup(`
                <div class="map-popup">
                    <h3>${universityData.name}</h3>
                    <p><i class="fas fa-map-marker-alt"></i> ${universityData.location}</p>
                    <button class="btn-primary" onclick="openGoogleMaps()">
                        <i class="fas fa-directions"></i> Get Directions
                    </button>
                </div>
            `);
    } catch (error) {
        console.error('Map initialization error:', error);
    }
}

async function calculateDistanceToUniversity() {
    const userLocation = document.getElementById('userLocationInput').value;
    const resultBox = document.getElementById('distanceResultBox');

    if (!userLocation) {
        alert('Please enter your location');
        return;
    }

    try {
        resultBox.innerHTML =
            '<p style="text-align:center; padding:20px; color:#000000;"><i class="fas fa-spinner fa-spin"></i> Calculating...</p>';
        resultBox.classList.add('active');

        const response = await fetch(
            `https://nominatim.openstreetmap.org/search?q=${encodeURIComponent(userLocation)}&format=json&limit=1`
        );
        const data = await response.json();

        if (data.length === 0) {
            resultBox.innerHTML =
                '<p style="color:#000000; text-align:center; padding:20px;">Location not found. Try another address.</p>';
            return;
        }

        const userLat = parseFloat(data[0].lat);
        const userLng = parseFloat(data[0].lon);
        const distance = calculateDistance(userLat, userLng, universityData.lat, universityData.lng);

        const carTime = Math.round((distance / 50) * 60);
        const trainTime = Math.round((distance / 60) * 60);
        const flightTime = distance > 200 ? Math.round((distance / 500) * 60) : null;

        resultBox.innerHTML = `
            <div class="distance-info">
                <div class="distance-number">${distance.toFixed(1)}</div>
                <div class="distance-text">
                    <h4>kilometers away</h4>
                    <p>From ${data[0].display_name.split(',').slice(0, 2).join(',')}</p>
                </div>
            </div>
            <div class="travel-time">
                <div class="travel-option">
                    <i class="fas fa-car"></i>
                    <div class="time">${Math.floor(carTime / 60)}h ${carTime % 60}m</div>
                    <div class="label">By Car</div>
                </div>
                <div class="travel-option">
                    <i class="fas fa-train"></i>
                    <div class="time">${Math.floor(trainTime / 60)}h ${trainTime % 60}m</div>
                    <div class="label">By Train</div>
                </div>
                ${flightTime ? `
                    <div class="travel-option">
                        <i class="fas fa-plane"></i>
                        <div class="time">${Math.floor(flightTime / 60)}h ${flightTime % 60}m</div>
                        <div class="label">By Flight</div>
                    </div>
                ` : ''}
            </div>
        `;

        if (userMarker) map.removeLayer(userMarker);
        if (routeLine) map.removeLayer(routeLine);

        const userIcon = L.divIcon({
            className: 'user-location-marker',
            html: '<div class="user-marker-pin"><i class="fas fa-map-pin"></i></div>',
            iconSize: [35, 35],
            iconAnchor: [17, 35]
        });

        userMarker = L.marker([userLat, userLng], { icon: userIcon })
            .addTo(map)
            .bindPopup('Your Location');

        routeLine = L.polyline(
            [[userLat, userLng], [universityData.lat, universityData.lng]],
            { color: '#2c5282', weight: 4, opacity: 0.7, dashArray: '10, 10' }
        ).addTo(map);

        const bounds = L.latLngBounds(
            [[userLat, userLng], [universityData.lat, universityData.lng]]
        );
        map.fitBounds(bounds, { padding: [80, 80] });
    } catch (error) {
        console.error('Distance error:', error);
        resultBox.innerHTML =
            '<p style="color:#000000; text-align:center; padding:20px;">Error. Please try again.</p>';
    }
}

function calculateDistance(lat1, lon1, lat2, lon2) {
    const R = 6371;
    const dLat = (lat2 - lat1) * Math.PI / 180;
    const dLon = (lon2 - lon1) * Math.PI / 180;
    const a =
        Math.sin(dLat / 2) * Math.sin(dLat / 2) +
        Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
        Math.sin(dLon / 2) * Math.sin(dLon / 2);
    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
    return R * c;
}

function openGoogleMaps() {
    window.open(
        `https://www.google.com/maps/dir/?api=1&destination=${universityData.lat},${universityData.lng}`,
        '_blank'
    );
}

function copyAddress() {
    const address = universityData.address;
    if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(address)
            .then(() => alert('Address copied!'))
            .catch(() => fallbackCopy(address));
    } else {
        fallbackCopy(address);
    }
}

function fallbackCopy(text) {
    const textArea = document.createElement("textarea");
    textArea.value = text;
    textArea.style.position = "fixed";
    textArea.style.top = "0";
    textArea.style.left = "0";
    document.body.appendChild(textArea);
    textArea.select();
    try {
        document.execCommand('copy');
        alert('Address copied!');
    } catch (err) {
        alert('Failed to copy');
    }
    document.body.removeChild(textArea);
}

// GALLERY FUNCTIONS
let currentGallerySlide = 0;
const totalGallerySlides = 3;

function moveGallerySlide(direction) {
    currentGallerySlide += direction;
    if (currentGallerySlide < 0) currentGallerySlide = totalGallerySlides - 1;
    if (currentGallerySlide >= totalGallerySlides) currentGallerySlide = 0;
    updateGallerySlide();
}

function goToGallerySlide(index) {
    currentGallerySlide = index;
    updateGallerySlide();
}

function updateGallerySlide() {
    const container = document.getElementById('galleryContainer');
    if (container) {
        container.style.transform = `translateX(-${currentGallerySlide * 100}%)`;
        document.querySelectorAll('.gallery-dot').forEach((dot, index) => {
            dot.classList.toggle('active', index === currentGallerySlide);
        });
    }
}

function openImageModal(element) {
    const modal = document.getElementById('imageModal');
    const modalImg = document.getElementById('modalImage');
    const img = element.querySelector('img');
    if (modal && modalImg && img) {
        modal.classList.add('active');
        modalImg.src = img.src;
    }
}

function closeImageModal() {
    const modal = document.getElementById('imageModal');
    if (modal) modal.classList.remove('active');
}

