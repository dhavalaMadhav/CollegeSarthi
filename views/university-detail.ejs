function initRecruitersCarousel() {
    const container = document.querySelector('.recruiters-carousel-container');
    if (!container) return;

    const companies = Array.from(document.querySelectorAll('.company-item'));
    if (companies.length === 0) return;

    const wrapper = document.querySelector('.recruiters-slides-wrapper');
    if (!wrapper) return;

    wrapper.innerHTML = '';

    const isMobile = window.innerWidth <= 768;
    const itemsPerSlide = isMobile ? 6 : 12;

    for (let i = 0; i < companies.length; i += itemsPerSlide) {
        const slide = document.createElement('div');
        slide.className = 'recruiters-slide';
        
        const slideCompanies = companies.slice(i, i + itemsPerSlide);
        slideCompanies.forEach(company => {
            slide.appendChild(company.cloneNode(true));
        });
        
        wrapper.appendChild(slide);
    }

    recruiterSlides = wrapper.querySelectorAll('.recruiters-slide');

    const dotsContainer = document.querySelector('.recruiters-dots');
    if (dotsContainer) {
        dotsContainer.innerHTML = '';
        recruiterSlides.forEach((_, index) => {
            const dot = document.createElement('div');
            dot.className = 'recruiter-dot' + (index === 0 ? ' active' : '');
            dot.onclick = () => goToRecruiterSlide(index);
            dotsContainer.appendChild(dot);
        });
    }

    container.addEventListener('touchstart', handleRecruiterTouchStart, { passive: true });
    container.addEventListener('touchmove', handleRecruiterTouchMove, { passive: false });
    container.addEventListener('touchend', handleRecruiterTouchEnd);
    
    container.addEventListener('mousedown', handleRecruiterMouseDown);
    container.addEventListener('mousemove', handleRecruiterMouseMove);
    container.addEventListener('mouseup', handleRecruiterMouseUp);
    container.addEventListener('mouseleave', handleRecruiterMouseUp);

    setInterval(() => {
        moveRecruiterSlide(1);
    }, 5000);
}

function moveRecruiterSlide(direction) {
    currentRecruiterSlide += direction;
    if (currentRecruiterSlide < 0) {
        currentRecruiterSlide = recruiterSlides.length - 1;
    }
    if (currentRecruiterSlide >= recruiterSlides.length) {
        currentRecruiterSlide = 0;
    }
    updateRecruiterSlide();
}

function goToRecruiterSlide(index) {
    currentRecruiterSlide = index;
    updateRecruiterSlide();
}

function updateRecruiterSlide() {
    const wrapper = document.querySelector('.recruiters-slides-wrapper');
    if (wrapper) {
        const offset = -currentRecruiterSlide * 100;
        wrapper.style.transform = `translateX(${offset}vw)`;
        
        document.querySelectorAll('.recruiter-dot').forEach((dot, index) => {
            dot.classList.toggle('active', index === currentRecruiterSlide);
        });
    }
}

function handleRecruiterTouchStart(e) {
    recruiterStartX = e.touches[0].clientX;
    recruiterIsDragging = true;
}

function handleRecruiterTouchMove(e) {
    if (!recruiterIsDragging) return;
    recruiterCurrentX = e.touches[0].clientX;
    
    if (Math.abs(recruiterCurrentX - recruiterStartX) > 10) {
        e.preventDefault();
    }
}

function handleRecruiterTouchEnd(e) {
    if (!recruiterIsDragging) return;
    recruiterIsDragging = false;
    
    const diff = recruiterStartX - recruiterCurrentX;
    
    if (Math.abs(diff) > 50) {
        if (diff > 0) {
            moveRecruiterSlide(1);
        } else {
            moveRecruiterSlide(-1);
        }
    }
    
    recruiterStartX = 0;
    recruiterCurrentX = 0;
}

function handleRecruiterMouseDown(e) {
    recruiterStartX = e.clientX;
    recruiterIsDragging = true;
}

function handleRecruiterMouseMove(e) {
    if (!recruiterIsDragging) return;
    recruiterCurrentX = e.clientX;
}

function handleRecruiterMouseUp(e) {
    if (!recruiterIsDragging) return;
    recruiterIsDragging = false;
    
    const diff = recruiterStartX - recruiterCurrentX;
    
    if (Math.abs(diff) > 50) {
        if (diff > 0) {
            moveRecruiterSlide(1);
        } else {
            moveRecruiterSlide(-1);
        }
    }
    
    recruiterStartX = 0;
    recruiterCurrentX = 0;
}

