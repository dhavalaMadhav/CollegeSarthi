<%- include('partials/header') %>

<style>
    /* ========================================
       QUIZ PAGE - SWISS DESIGN SYSTEM
    ======================================== */
    
    /* Hero Section */
    .quiz-hero {
        height: 300px;
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: var(--white);
        padding: 120px 30px 40px;
        border-bottom: 2px solid var(--black);
        position: relative;
        overflow: hidden;
    }

    .quiz-hero-content {
        max-width: 800px;
        position: relative;
        z-index: 2;
    }

    .quiz-hero h1 {
        font-size: 3rem;
        font-weight: var(--font-weight-black);
        margin-bottom: 20px;
        line-height: 1.1;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        position: relative;
        display: inline-block;
        padding-bottom: 40px;
        margin-bottom: 20px;
    }

    .quiz-hero h1::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        background: var(--black);
        bottom: 15px;
        left: 0;
        z-index: 1;
    }

    .quiz-hero h1::before {
        content: '';
        position: absolute;
        width: 28px;
        height: 28px;
        background: var(--accent);
        border: 3px solid var(--black);
        border-radius: 50%;
        bottom: -2px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        box-shadow: 0 0 0 8px rgba(0, 0, 0, 0.08);
    }

    .quiz-hero p {
        font-size: 1.25rem;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
        font-weight: var(--font-weight-medium);
    }

    /* Grid Overlay */
    .quiz-hero-grid {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(4, 1fr);
        gap: 2px;
        padding: 2px;
        background-color: rgba(0, 0, 0, 0.2);
        z-index: 1;
        opacity: 0.7;
    }

    .quiz-grid-cell {
        background-color: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: var(--font-weight-bold);
        color: var(--black);
        transition: all 0.3s ease;
    }

    /* Quiz Container with Corner Borders */
    .quiz-page-container {
        width: 90%;
        max-width: 1200px;
        margin: 60px auto 120px;
        background: var(--white);
        padding: 0;
        position: relative;
        border: 2px solid var(--black);
        box-shadow: var(--shadow-lg);
    }

    /* CORNER BORDERS - Top Left & Bottom Right */
    .quiz-page-container::before {
        content: '';
        position: absolute;
        top: 20px;
        left: 20px;
        width: 60px;
        height: 60px;
        border-top: 3px solid var(--primary);
        border-left: 3px solid var(--primary);
        z-index: 10;
    }

    .quiz-page-container::after {
        content: '';
        position: absolute;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-bottom: 3px solid var(--primary);
        border-right: 3px solid var(--primary);
        z-index: 10;
    }

    /* Quiz Progress */
    .quiz-progress {
        height: 8px;
        background: var(--gray-100);
        border-bottom: 2px solid var(--black);
        position: relative;
    }

    .quiz-progress-bar {
        height: 100%;
        background: var(--accent);
        width: 0%;
        transition: width 0.3s ease;
    }

    /* Quiz Steps */
    .quiz-step {
        padding: 60px;
        display: none;
    }

    .quiz-step.active {
        display: block;
        animation: swissSlideIn 0.3s ease;
    }

    @keyframes swissSlideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .quiz-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .quiz-header h2 {
        font-size: 2.5rem;
        font-weight: var(--font-weight-black);
        color: var(--black);
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .quiz-header p {
        font-size: 1.125rem;
        color: var(--gray-700);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* ========================================
       STREAM SELECTION - SQUARE GRID (2x2)
    ======================================== */
    #streamStep {
        padding: 0;
        background-color: #f1f5f9;
        position: relative;
        overflow: hidden;
    }

    #streamStep .quiz-header {
        padding: 40px 60px 0;
    }

    /* GRID LAYOUT FOR STREAM OPTIONS */
    .stream-options-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        height: 500px;
        width: 100%;
        position: relative;
    }

    .stream-options-grid::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        width: 1px;
        height: 100%;
        background: linear-gradient(to bottom, 
            transparent 0%, 
            rgba(0, 0, 0, 0.1) 10%, 
            rgba(0, 0, 0, 0.1) 90%, 
            transparent 100%);
        z-index: 1;
    }

    .stream-options-grid::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(to right, 
            transparent 0%, 
            rgba(0, 0, 0, 0.1) 10%, 
            rgba(0, 0, 0, 0.1) 90%, 
            transparent 100%);
        z-index: 1;
    }

    /* Stream Selection Cards - LARGE SQUARE BUTTONS */
    .stream-option-card {
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.95) 0%, 
            rgba(255, 255, 255, 0.85) 100%);
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        padding: 40px;
    }

    .stream-option-card:hover {
        transform: translateX(5px);
        z-index: 2;
        background-color: #f1f5f9;
    }

    .stream-option-card.selected {
        background: linear-gradient(135deg, 
            var(--accent) 0%, 
            var(--accent-dark) 100%);
    }

    .stream-option-card i {
        font-size: 3.5rem;
        color: var(--primary);
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .stream-option-card:hover i {
        transform: scale(1.1);
    }

    .stream-option-card.selected i {
        color: var(--white);
    }

    .stream-option-title {
        font-size: 1.75rem;
        font-weight: var(--font-weight-black);
        color: var(--black);
        margin-bottom: 12px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        line-height: 1.2;
    }

    .stream-option-card:hover .stream-option-title {
        color: var(--primary);
    }

    .stream-option-card.selected .stream-option-title {
        color: var(--white);
    }

    .stream-option-subtitle {
        font-size: 1rem;
        color: var(--gray-700);
        font-weight: var(--font-weight-medium);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        line-height: 1.5;
        max-width: 300px;
    }

    .stream-option-card:hover .stream-option-subtitle {
        color: var(--gray-900);
    }

    .stream-option-card.selected .stream-option-subtitle {
        color: rgba(255, 255, 255, 0.9);
    }

    /* Corner Markers for Stream Cards */
    .stream-option-card::before,
    .stream-option-card::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .stream-option-card::before {
        top: 20px;
        left: 20px;
        border-top: 2px solid var(--primary);
        border-left: 2px solid var(--primary);
    }

    .stream-option-card::after {
        bottom: 20px;
        right: 20px;
        border-bottom: 2px solid var(--primary);
        border-right: 2px solid var(--primary);
    }

    .stream-option-card:hover::before,
    .stream-option-card:hover::after {
        opacity: 1;
    }

    .stream-option-card.selected::before,
    .stream-option-card.selected::after {
        border-color: var(--white);
        opacity: 1;
    }

    /* ========================================
       QUESTION OPTIONS - VERTICAL COLUMN LAYOUT
    ======================================== */
    .question-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .question-card {
        background: var(--white);
        border: 2px solid var(--black);
        padding: 50px;
        margin-bottom: 40px;
        box-shadow: var(--shadow-md);
        position: relative;
    }

    /* Corner Borders for Question Card */
    .question-card::before {
        content: '';
        position: absolute;
        top: 15px;
        left: 15px;
        width: 40px;
        height: 40px;
        border-top: 3px solid var(--primary);
        border-left: 3px solid var(--primary);
    }

    .question-card::after {
        content: '';
        position: absolute;
        bottom: 15px;
        right: 15px;
        width: 40px;
        height: 40px;
        border-bottom: 3px solid var(--primary);
        border-right: 3px solid var(--primary);
    }

    .question-number {
        font-size: 0.875rem;
        font-weight: var(--font-weight-bold);
        color: var(--primary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 15px;
        display: inline-block;
        padding: 8px 16px;
        background: rgba(0, 85, 255, 0.1);
        border-left: 3px solid var(--primary);
    }

    .question-text {
        font-size: 1.75rem;
        font-weight: var(--font-weight-bold);
        color: var(--black);
        margin-bottom: 40px;
        line-height: 1.4;
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    /* VERTICAL COLUMN - Each option stacked on top of each other */
    .answer-options {
        display: flex;
        flex-direction: column;
        gap: 18px;
    }

    .question-option {
        display: flex;
        align-items: center;
        padding: 24px 28px;
        background: var(--white);
        border: 2px solid var(--gray-300);
        cursor: pointer;
        transition: all 0.25s ease;
        text-align: left;
        position: relative;
    }

    .question-option:hover {
        border-color: var(--primary);
        background: rgba(0, 85, 255, 0.05);
        transform: translateX(8px);
    }

    .question-option.selected {
        background: var(--primary);
        border-color: var(--primary-dark);
        transform: translateX(12px);
        box-shadow: var(--shadow-primary);
    }

    /* Disable hover after selection */
    .question-option.selected:hover {
        transform: translateX(12px);
    }

    /* Option Number Badge */
    .option-number {
        width: 45px;
        height: 45px;
        border: 2px solid var(--black);
        margin-right: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: var(--font-weight-black);
        color: var(--black);
        flex-shrink: 0;
        background: var(--white);
        transition: all 0.25s ease;
    }

    .question-option:hover .option-number {
        background: var(--primary);
        color: var(--white);
        border-color: var(--primary);
        transform: scale(1.1);
    }

    .question-option.selected .option-number {
        background: var(--white);
        color: var(--primary);
        border-color: var(--white);
        transform: scale(1.15);
    }

    .option-text {
        font-size: 1.25rem;
        font-weight: var(--font-weight-medium);
        color: var(--black);
        flex: 1;
        line-height: 1.5;
        transition: all 0.25s ease;
    }

    .question-option.selected .option-text {
        color: var(--white);
        font-weight: var(--font-weight-bold);
    }

    /* Quiz Navigation - Only Previous Button */
    .quiz-navigation {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        max-width: 900px;
        margin: 0 auto;
        padding-top: 40px;
        border-top: 2px solid var(--gray-200);
    }

    /* Quiz Buttons */
    .quiz-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 16px 32px;
        font-family: var(--font-main);
        font-size: 1rem;
        font-weight: var(--font-weight-semibold);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border: 2px solid var(--black);
        background-color: var(--white);
        color: var(--black);
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: var(--shadow-sm);
        position: relative;
    }

    .quiz-btn:hover:not(:disabled) {
        transform: translate(-2px, -2px);
        box-shadow: var(--shadow-lg);
    }

    .quiz-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .quiz-btn.accent {
        background-color: var(--accent);
        color: var(--black);
        border-color: var(--black);
        box-shadow: var(--shadow-accent);
    }

    .quiz-btn i {
        margin-right: 10px;
    }

    /* Student Info Form */
    .student-info-form {
        max-width: 700px;
        margin: 0 auto;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: var(--font-weight-semibold);
        color: var(--black);
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .form-group label .required {
        color: var(--secondary);
    }

    .form-control {
        width: 100%;
        padding: 18px 20px;
        font-size: 1rem;
        font-family: var(--font-main);
        border: 2px solid var(--black);
        background: var(--white);
        color: var(--black);
        transition: all 0.2s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(0, 85, 255, 0.1);
    }

    /* Loading State */
    .loading-container {
        text-align: center;
        padding: 80px 20px;
    }

    .loader {
        border: 8px solid var(--gray-200);
        border-top: 8px solid var(--accent);
        border-radius: 50%;
        width: 80px;
        height: 80px;
        animation: spin 1s linear infinite;
        margin: 0 auto;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .quiz-page-container {
            width: 95%;
        }
    }

    @media (max-width: 768px) {
        .quiz-hero {
            height: 250px;
            padding: 100px 20px 30px;
        }
        
        .quiz-hero h1 {
            font-size: 2rem;
        }
        
        .quiz-step {
            padding: 40px 30px;
        }
        
        .stream-options-grid {
            grid-template-columns: 1fr;
            grid-template-rows: repeat(4, 1fr);
            height: auto;
            min-height: 600px;
        }
        
        .stream-options-grid::before {
            display: none;
        }
        
        .stream-option-card {
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
        
        .question-card {
            padding: 35px 25px;
        }
        
        .question-text {
            font-size: 1.4rem;
        }

        .question-option {
            padding: 18px 20px;
        }

        .option-text {
            font-size: 1.125rem;
        }
    }

    @media (max-width: 600px) {
        .quiz-page-container::before,
        .quiz-page-container::after {
            width: 40px;
            height: 40px;
        }

        .quiz-step {
            padding: 30px 20px;
        }
        
        .question-card {
            padding: 30px 20px;
        }

        .question-text {
            font-size: 1.25rem;
        }

        .option-number {
            width: 40px;
            height: 40px;
            font-size: 1.125rem;
            margin-right: 18px;
        }
        
        .option-text {
            font-size: 1rem;
        }
    }
</style>

<!-- Hero Section -->
