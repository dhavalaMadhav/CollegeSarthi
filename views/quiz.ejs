<script>
let currentQuestion = 0;
let quizAnswers = {};
let selectedStream = '';
let totalQuestions = 5;

// Initialize stream selection
document.querySelectorAll('.stream-option-card').forEach(card => {
    card.addEventListener('click', function() {
        document.querySelectorAll('.stream-option-card').forEach(c => c.classList.remove('selected'));
        this.classList.add('selected');
        selectedStream = this.dataset.value;
        
        // Auto-advance to questions after showing selection
        setTimeout(() => {
            document.getElementById('streamStep').classList.remove('active');
            document.getElementById('questionsStep').classList.add('active');
            loadQuestion(0);
            updateProgress();
        }, 300);
    });
});

// AUTO-ADVANCE: Click option → mark selected → redirect to next
function setupQuestionOptions() {
    document.querySelectorAll('.question-option').forEach(option => {
        option.addEventListener('click', function() {
            if (this.classList.contains('selected')) return;
            
            this.parentElement.querySelectorAll('.question-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            this.classList.add('selected');
            
            const questionId = this.closest('.question-card').dataset.questionId;
            quizAnswers[questionId] = this.dataset.value;
            
            this.parentElement.querySelectorAll('.question-option').forEach(opt => {
                opt.style.pointerEvents = 'none';
            });
            
            setTimeout(() => {
                nextQuestion();
            }, 200);
        });
    });
}

function nextQuestion() {
    currentQuestion++;
    
    if (currentQuestion >= totalQuestions) {
        document.getElementById('questionsStep').classList.remove('active');
        document.getElementById('studentInfoStep').classList.add('active');
    } else {
        loadQuestion(currentQuestion);
    }
    
    updateProgress();
    
    if (currentQuestion > 0) {
        document.getElementById('prevBtn').style.display = 'inline-flex';
    }
}

function previousQuestion() {
    if (currentQuestion > 0) {
        currentQuestion--;
        loadQuestion(currentQuestion);
        updateProgress();
        
        if (currentQuestion === 0) {
            document.getElementById('prevBtn').style.display = 'none';
        }
    }
}

function loadQuestion(index) {
    const questions = [
        {
            id: 'q1',
            text: 'What is your primary career goal?',
            options: [
                { value: 'research', text: 'Research and Development' },
                { value: 'corporate', text: 'Corporate Career' },
                { value: 'entrepreneurship', text: 'Entrepreneurship' },
                { value: 'academia', text: 'Academic Career' }
            ]
        },
        {
            id: 'q2',
            text: 'What is your preferred study location?',
            options: [
                { value: 'domestic', text: 'Within My Country' },
                { value: 'international', text: 'Study Abroad' },
                { value: 'online', text: 'Online/Remote' },
                { value: 'hybrid', text: 'Hybrid (Mix of Both)' }
            ]
        },
        {
            id: 'q3',
            text: 'What is your budget range for education?',
            options: [
                { value: 'budget', text: 'Budget Friendly (Under 5 Lakhs)' },
                { value: 'moderate', text: 'Moderate (5-10 Lakhs)' },
                { value: 'premium', text: 'Premium (10-20 Lakhs)' },
                { value: 'luxury', text: 'Luxury (Above 20 Lakhs)' }
            ]
        },
        {
            id: 'q4',
            text: 'What type of campus environment do you prefer?',
            options: [
                { value: 'urban', text: 'Urban City Campus' },
                { value: 'suburban', text: 'Suburban Area' },
                { value: 'rural', text: 'Rural/Countryside' },
                { value: 'any', text: 'No Preference' }
            ]
        },
        {
            id: 'q5',
            text: 'What matters most to you in a university?',
            options: [
                { value: 'ranking', text: 'University Ranking & Reputation' },
                { value: 'placement', text: 'Placement Opportunities' },
                { value: 'research', text: 'Research Facilities' },
                { value: 'culture', text: 'Campus Culture & Activities' }
            ]
        }
    ];
    
    const question = questions[index];
    const questionHTML = `
        <div class="question-card" data-question-id="${question.id}">
            <div class="question-number">Question ${index + 1} of ${totalQuestions}</div>
            <h3 class="question-text">${question.text}</h3>
            
            <div class="answer-options">
                ${question.options.map((opt, i) => `
                    <div class="question-option" data-value="${opt.value}">
                        <div class="option-number">${i + 1}</div>
                        <div class="option-text">${opt.text}</div>
                    </div>
                `).join('')}
            </div>
        </div>
    `;
    
    document.getElementById('questionContainer').innerHTML = questionHTML;
    setupQuestionOptions();
}

function updateProgress() {
    const totalSteps = totalQuestions + 2;
    const progress = ((currentQuestion + 2) / totalSteps) * 100;
    document.getElementById('progressBar').style.width = progress + '%';
}

// Form submission
document.getElementById('studentInfoForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    document.getElementById('studentInfoStep').classList.remove('active');
    document.getElementById('loadingStep').classList.add('active');
    document.getElementById('progressBar').style.width = '100%';
    
    const formData = {
        name: document.getElementById('studentName').value,
        phone: document.getElementById('studentPhone').value,
        email: document.getElementById('studentEmail').value,
        city: document.getElementById('studentCity').value,
        stream: selectedStream,
        answers: quizAnswers
    };
    
    try {
        const response = await fetch('/api/leads/quiz', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });
        
        const result = await response.json();
        
        if (result.success) {
            // Calculate quiz score based on answers
            const quizScore = calculateScore(quizAnswers);
            
            // Store results with recommendations from API
            const quizResults = {
                quizScore: quizScore,
                recommendations: result.recommendations || []
            };
            
            // Add match percentages to recommendations
            quizResults.recommendations = quizResults.recommendations.map((uni, index) => {
                return {
                    ...uni,
                    matchPercentage: 95 - (index * 3), // Descending match %
                    id: uni._id,
                    image: uni.logo || uni.image || '/images/default-university.jpg'
                };
            });
            
            localStorage.setItem('quizResults', JSON.stringify(quizResults));
            
            setTimeout(() => {
                window.location.href = '/quiz-results';
            }, 2000);
        } else {
            alert('Error submitting quiz. Please try again.');
            document.getElementById('loadingStep').classList.remove('active');
            document.getElementById('studentInfoStep').classList.add('active');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Network error. Please try again.');
        document.getElementById('loadingStep').classList.remove('active');
        document.getElementById('studentInfoStep').classList.add('active');
    }
});

// Calculate score based on answers
function calculateScore(answers) {
    let score = 60; // Base score
    
    // Add points based on specific answers
    if (answers.q1 === 'corporate') score += 10;
    if (answers.q2 === 'domestic') score += 8;
    if (answers.q3 === 'moderate') score += 7;
    if (answers.q4 !== 'any') score += 5;
    if (answers.q5 === 'placement') score += 10;
    
    return Math.min(score, 100); // Cap at 100
}
