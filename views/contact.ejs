}


/* UPDATED: Contact info items - removed bottom border, only ONE line at top of social */
.contact-info-item {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 25px;
}


.contact-info-item:last-child {
    margin-bottom: 0;
}


/* UPDATED: Contact info icons - transparent background with blue icon */
