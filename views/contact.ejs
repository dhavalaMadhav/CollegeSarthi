    padding: 12px 15px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 6px;
    font-size: 0.9rem;
    color: #1B1F24;
    background: #FFFFFF;
    transition: all 0.3s ease;
}


.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
