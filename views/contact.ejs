    align-self: flex-start;
    display: inline-flex;
    align-items: center;
    gap: 10px;
}


.form-submit-btn:hover {
    background: #1E4364;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(44, 95, 141, 0.3);
}


.form-submit-btn i {
    font-size: 0.95rem;
