    margin-bottom: 5px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}


.contact-info-details p {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 0.95rem;
    color: #1B1F24;
    line-height: 1.5;
    margin: 0;
}


.contact-info-details a {
