<script>
document.addEventListener('DOMContentLoaded', function() {
    const categoryTabs = document.querySelectorAll('.category-tab');
    const coursesLists = document.querySelectorAll('.courses-list');
    
    categoryTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            // Remove active class from all tabs
            categoryTabs.forEach(t => t.classList.remove('active'));
            
            // Add active class to clicked tab
            this.classList.add('active');
            
            // Get category
            const category = this.dataset.category;
            
            // Hide all course lists
            coursesLists.forEach(list => list.classList.remove('active'));
            
            // Show selected course list
            const selectedList = document.querySelector(`.courses-list[data-category="${category}"]`);
            if (selectedList) {
                selectedList.classList.add('active');
            }
        });
    });
});
</script>

