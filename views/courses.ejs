<style>
/* Courses Page - Academic Theme with Tabs */

/* Global Scrollbar Hide */
html, body {
    overflow-x: hidden;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

::-webkit-scrollbar {
    display: none;
}

/* Hero Section - Matching Quiz Page Style */
.courses-hero {
    position: relative;
    width: 100%;
    min-height: 200px;
    overflow: hidden;
    background: #000000;
    padding: 80px 5% 50px;
    display: flex;
    align-items: center;
    border-bottom: none;
}

/* Background Image */
.courses-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('https://images.unsplash.com/photo-1481627834876-b7833e8f5570?w=1920&q=80');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 0;
}

/* Black Overlay */
.courses-hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.70);
    z-index: 1;
}

.courses-hero-content {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    text-align: left;
}

.courses-hero h1 {
    font-family: 'Libre Baskerville', Georgia, serif;
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0;
    color: #FFFFFF;
    line-height: 1.3;
    letter-spacing: -0.01em;
    text-decoration: none;
}

/* Category Tabs Section - ALWAYS STICKY */
.category-tabs-section {
    position: sticky;
    top: 0;
    z-index: 100;
    background: #FFFFFF;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    padding: 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}

.category-tabs-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 5%;
}

.category-tabs {
    display: flex;
    gap: 0;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

.category-tabs::-webkit-scrollbar {
    display: none;
}

.category-tab {
    flex: 1;
    min-width: 200px;
    padding: 24px 32px;
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: #6B7280;
    cursor: pointer;
    transition: all 0.25s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.category-tab:hover {
    color: #2C5F8D;
    background: rgba(44, 95, 141, 0.05);
}

.category-tab.active {
    color: #2C5F8D;
    border-bottom-color: #2C5F8D;
    background: transparent;
}

.category-tab i {
    font-size: 1.2rem;
}

/* Courses List Section */
.courses-list-section {
    padding: 60px 5%;
    background: #FFFFFF;
    min-height: 500px;
}

.courses-list-container {
    max-width: 1400px;
    margin: 0 auto;
}

.courses-list {
    display: none;
}

.courses-list.active {
    display: block;
}

.course-item {
    padding: 24px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
}

.course-item:first-child {
    padding-top: 0;
}

.course-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

/* Narrow border at ends */
.course-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 5%;
    right: 5%;
    height: 1px;
    background: rgba(0, 0, 0, 0.08);
}

.course-item:last-child::after {
    display: none;
}

.course-item:hover {
    padding-left: 12px;
}

.course-item:hover .course-item-title {
    color: #2C5F8D;
}

.course-item-title {
    font-family: 'Libre Baskerville', Georgia, serif;
    font-size: 1.3rem;
    font-weight: 600;
    color: #1B1F24;
    margin-bottom: 8px;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.course-item-title i {
    font-size: 1rem;
    color: #6B7280;
    transition: all 0.2s ease;
}

.course-item:hover .course-item-title i {
    color: #2C5F8D;
    transform: translateX(5px);
}

.course-item-description {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 0.9rem;
    color: #4B5563;
    line-height: 1.6;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 80px 20px;
}

.empty-state i {
    font-size: 4rem;
    color: #E5E7EB;
    margin-bottom: 20px;
}

.empty-state h3 {
    font-family: 'Libre Baskerville', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #6B7280;
    margin-bottom: 12px;
}

.empty-state p {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 0.95rem;
    color: #9CA3AF;
}

/* Responsive */
@media (max-width: 768px) {
    .courses-hero {
        min-height: 120px;
        padding: 40px 5% 30px;
    }

    .courses-hero h1 {
        font-size: 1.6rem;
    }

    /* Tabs remain sticky on mobile with 2x2 grid */
    .category-tabs-section {
        position: sticky;
        top: 0;
        z-index: 100;
        background: #FFFFFF;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        padding: 0;
    }

    .category-tabs-container {
        padding: 0;
    }

    .category-tabs {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 0;
    }

    .category-tab {
        min-width: auto;
        padding: 16px 12px;
        border: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
        border-right: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 0;
        justify-content: flex-start;
        text-align: left;
        font-size: 0.65rem;
        gap: 10px;
        background: #FFFFFF;
        border-left: 3px solid transparent;
        line-height: 1.2;
        letter-spacing: 0.03em;
    }

    .category-tab span {
        white-space: normal;
        word-break: break-word;
    }

    /* Remove right border on last column */
    .category-tab:nth-child(2),
    .category-tab:nth-child(4) {
        border-right: none;
    }

    /* Remove bottom border on last row */
    .category-tab:nth-child(3),
    .category-tab:nth-child(4) {
        border-bottom: none;
    }

    .category-tab i {
        font-size: 1.1rem;
        color: #6B7280;
        flex-shrink: 0;
    }

    .category-tab.active {
        background: #F7F8FA;
        border-left-color: #2C5F8D;
        color: #2C5F8D;
    }

    .category-tab.active i {
        color: #2C5F8D;
    }

    .category-tab:hover {
        background: #F7F8FA;
    }

    .courses-list-section {
        padding: 40px 5%;
    }

    .course-item-title {
        font-size: 1.1rem;
    }

    .course-item-description {
        font-size: 0.85rem;
    }
}

@media (max-width: 600px) {
    .courses-hero {
        min-height: 100px;
        padding: 35px 5% 25px;
    }

    .courses-hero h1 {
        font-size: 1.4rem;
