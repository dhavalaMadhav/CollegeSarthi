<script>
console.log('Initializing page...');

// ========================================
// HERO CAROUSEL
// ========================================
const carouselTrack = document.querySelector('.carousel-track');
const carouselDots = document.querySelectorAll('.carousel .dot');
const carouselPrevBtn = document.querySelector('.carousel-prev');
const carouselNextBtn = document.querySelector('.carousel-next');
const heroSection = document.querySelector('.hero');
const carouselSlides = document.querySelectorAll('.carousel-slide');

let currentCarouselSlide = 0;
const totalCarouselSlides = 3;
let carouselTouchStartX = 0;
let carouselTouchEndX = 0;
let carouselInterval;

function moveCarouselToSlide(slideIndex) {
    currentCarouselSlide = slideIndex;
    const translateX = -slideIndex * 33.333;
    carouselTrack.style.transform = `translateX(${translateX}%)`;
    
    carouselDots.forEach((dot, index) => {
        if (index === slideIndex) {
            dot.classList.add('active');
        } else {
            dot.classList.remove('active');
        }
    });
    
    carouselSlides[slideIndex].querySelector('.carousel-content').style.animation = 'none';
    setTimeout(() => {
        carouselSlides[slideIndex].querySelector('.carousel-content').style.animation = 'fadeInUp 1s ease-out';
    }, 10);
}

carouselDots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
        moveCarouselToSlide(index);
        resetCarouselInterval();
    });
});

carouselPrevBtn.addEventListener('click', () => {
    let prevSlide = currentCarouselSlide - 1;
    if (prevSlide < 0) {
        prevSlide = totalCarouselSlides - 1;
    }
    moveCarouselToSlide(prevSlide);
    resetCarouselInterval();
});

carouselNextBtn.addEventListener('click', () => {
    let nextSlide = currentCarouselSlide + 1;
    if (nextSlide >= totalCarouselSlides) {
        nextSlide = 0;
    }
    moveCarouselToSlide(nextSlide);
    resetCarouselInterval();
});

function nextCarouselSlide() {
    let nextSlide = currentCarouselSlide + 1;
    if (nextSlide >= totalCarouselSlides) {
        nextSlide = 0;
    }
    moveCarouselToSlide(nextSlide);
}

function startCarouselInterval() {
    carouselInterval = setInterval(nextCarouselSlide, 5000);
}

function resetCarouselInterval() {
    clearInterval(carouselInterval);
    startCarouselInterval();
}

heroSection.addEventListener('mouseenter', () => {
    clearInterval(carouselInterval);
});

heroSection.addEventListener('mouseleave', () => {
    startCarouselInterval();
});

moveCarouselToSlide(0);
startCarouselInterval();

// ========================================
// STATS COUNTER ANIMATION
// ========================================
function animateCounters() {
    const counters = document.querySelectorAll('.stat-number');
    const speed = 200;
    
    counters.forEach(counter => {
        const target = +counter.getAttribute('data-target');
        const increment = target / speed;
        
        const updateCount = () => {
            const count = +counter.innerText;
            
            if (count < target) {
                counter.innerText = Math.ceil(count + increment);
                setTimeout(updateCount, 10);
            } else {
                counter.innerText = target;
            }
        };
        
        updateCount();
    });
}

const statsSection = document.querySelector('.stats-section');
let counterAnimated = false;

const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting && !counterAnimated) {
            animateCounters();
            counterAnimated = true;
        }
    });
}, { threshold: 0.5 });

if (statsSection) {
    observer.observe(statsSection);
}

// ========================================
// TESTIMONIALS CAROUSEL
// ========================================
const storiesCarousel = document.getElementById('testimonialsCarousel');
const prevButton = document.getElementById('testimonialPrevBtn');
const nextButton = document.getElementById('testimonialNextBtn');
const storyCards = document.querySelectorAll('.story-card');
let currentStoryIndex = 0;

function scrollToCard(index) {
    const cardWidth = 420;
    const gap = 40;
    const scrollAmount = (cardWidth + gap) * index;
    storiesCarousel.scrollTo({
        left: scrollAmount,
        behavior: 'smooth'
    });
    currentStoryIndex = index;
}

prevButton.addEventListener('click', () => {
    if (currentStoryIndex > 0) {
        currentStoryIndex--;
        scrollToCard(currentStoryIndex);
    }
});

nextButton.addEventListener('click', () => {
    if (currentStoryIndex < storyCards.length - 1) {
        currentStoryIndex++;
        scrollToCard(currentStoryIndex);
    }
});

// ========================================
// FAQ ACCORDION
// ========================================
const faqItems = document.querySelectorAll('.faq-item');

faqItems.forEach(item => {
    const question = item.querySelector('.faq-question');
    
    question.addEventListener('click', () => {
        const isActive = item.classList.contains('active');
        
        faqItems.forEach(faq => faq.classList.remove('active'));
        
        if (!isActive) {
            item.classList.add('active');
        }
    });
});

console.log('All sections initialized successfully ✅');
</script>

