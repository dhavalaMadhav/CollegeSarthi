<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Source+Sans+3:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">


<style>
/* ========================================
   UNIVERSITY ACADEMIC THEME - COMPLETE STYLES
   ======================================== */


/* Root Variables - Academic Color Palette */
:root {
    /* Backgrounds - Almost white, never pure white */
    --bg-primary: #F7F8FA;
    --bg-alternate: #F1F3F6;
    --bg-surface: #FFFFFF;
    
    /* Text Colors - Scholarly Hierarchy */
    --text-primary: #1B1F24;
    --text-body: #4B5563;
    --text-muted: #6B7280;
    
    /* Academic Blue Accent - Single restrained accent */
    --accent-primary: #2C5F8D;
    --accent-hover: #1E4364;
    --accent-light: rgba(44, 95, 141, 0.08);
    
    /* Bright Blue for Advisor Button */
    --bright-blue: #007BFF;
    --bright-blue-hover: #0056b3;
    
    /* Yellow for stars */
    --star-yellow: #FFD700;
    --star-yellow-dark: #FFC107;
    
    /* Subtle Illumination */
    --shadow-soft: 0 2px 8px rgba(0, 0, 0, 0.04);
    --shadow-medium: 0 4px 12px rgba(0, 0, 0, 0.06);
    
    /* Typography */
    --font-heading: 'Libre Baskerville', Georgia, serif;
    --font-body: 'Source Sans 3', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-simple: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
}


/* Global Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}


body {
    font-family: var(--font-simple);
    color: var(--text-body);
    background: var(--bg-primary);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    font-size: 14px;
}


/* Typography - Academic Hierarchy - NO UNDERLINES */
h1, h2 {
    font-family: var(--font-heading);
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.01em;
    text-decoration: none;
}

/* Side headings and points use simpler font */
h3, h4, h5, h6 {
    font-family: var(--font-simple);
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.3;
    text-decoration: none;
}


h1 { font-size: 2rem; }
h2 { font-size: 1.75rem; }
h3 { font-size: 1.1rem; }
p { 
    font-size: 0.88rem; 
    line-height: 1.6;
    font-family: var(--font-simple);
}


/* Remove ALL underlines globally */
h1::after, h2::after, h3::after,
h1::before, h2::before, h3::before {
    display: none !important;
}


/* ========================================
   HERO SECTION - ANIMATED UNIVERSITY NAMES IN BOXES WITH BACKGROUND IMAGE
   ======================================== */


.hero {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: #000000; /* Black background for hero */
    padding: 4rem 5%;
    min-height: 700px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* University Background Image with Black Overlay */
.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-image: url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=1920&q=80');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.hero-background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7); /* Black overlay */
}


.hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 850px;
    margin: 0 auto;
}


.hero-content h1 {
    font-size: 2.4rem;
    margin-bottom: 0.5rem;
    color: #FFFFFF; /* White text on black */
    font-weight: 700;
    text-decoration: none;
}


.university-title {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9); /* Lighter white */
    margin-bottom: 1.2rem;
    font-weight: 500;
    font-family: var(--font-heading);
    font-style: italic;
}


.hero-content p {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.85); /* Lighter white */
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    font-family: var(--font-simple);
}


/* Hero Buttons - UPDATED with curved edges */
.hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}


.btn-primary, .btn-secondary {
    font-family: var(--font-simple);
    font-weight: 600;
    font-size: 0.85rem;
    padding: 0.8rem 1.8rem;
    border: none;
    cursor: pointer;
    transition: all 0.25s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 25px; /* Curved edges */
    box-shadow: none;
}


.btn-primary {
    background: var(--accent-primary);
    color: #FFFFFF;
}


.btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
}


/* Bright Blue Button for Advisor */
.btn-bright-blue {
    background: var(--bright-blue);
    color: #FFFFFF;
    font-family: var(--font-simple);
    font-weight: 600;
    font-size: 0.85rem;
    padding: 0.8rem 1.8rem;
    border: none;
    cursor: pointer;
    transition: all 0.25s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 25px; /* Curved edges */
    box-shadow: none;
}

.btn-bright-blue:hover {
    background: var(--bright-blue-hover);
    transform: translateY(-2px);
}


.btn-secondary {
    background: transparent;
    color: #FFFFFF;
    border: 2px solid #FFFFFF;
}


.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}


/* Animated University Names in Boxes */
.university-marquee {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 5;
    opacity: 0.3; /* Reduced opacity to see background image better */
}


.marquee-row {
    position: absolute;
    white-space: nowrap;
    transform: rotate(-45deg);
    width: 200%;
}

.marquee-row-1 {
    top: 20%;
    left: -50%;
    animation: marquee-1 40s linear infinite;
}

.marquee-row-2 {
    bottom: 20%;
    right: -50%;
    animation: marquee-2 35s linear infinite;
}

.marquee-track {
    display: inline-block;
}

.university-box {
    display: inline-block;
    background: rgba(0, 0, 0, 0.7); /* Dark box background */
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 0.8rem 1.5rem;
    margin: 0 1.5rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.university-box:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.university-name {
    font-size: 1.4rem;
    font-weight: bold;
    color: #FFFFFF; /* White text */
    font-family: var(--font-heading);
    white-space: nowrap;
}

@keyframes marquee-1 {
    0% { transform: rotate(-45deg) translateX(0); }
    100% { transform: rotate(-45deg) translateX(-50%); }
}

@keyframes marquee-2 {
    0% { transform: rotate(-45deg) translateX(0); }
    100% { transform: rotate(-45deg) translateX(50%); }
}

/* ========================================
   STATS SECTION - REDUCED SPACING
   ======================================== */


.stats-section {
    padding: 1.5rem 5%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.05) 0%, rgba(255, 255, 255, 0) 100%);
    position: relative;
}


.stats-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
}


.stat-item {
    text-align: center;
    padding: 0.8rem 0.3rem;
    transition: all 0.3s ease;
}


.stat-item:hover {
    transform: translateY(-4px);
}


.stat-icon {
    font-size: 1.3rem;
    color: var(--accent-primary);
    margin-bottom: 0.3rem;
}


.stat-number, .stat-number-text {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-primary);
    display: inline-block;
}


.stat-plus, .stat-percent {
    font-size: 1rem;
    color: var(--accent-primary);
    display: inline-block;
    margin-left: 0.2rem;
}


.stat-label {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: 0.2rem;
    font-weight: 500;
    font-family: var(--font-simple);
}


/* ========================================
   SECTION HEADERS (Global) - NO UNDERLINES
   ======================================== */


.section-header {
    text-align: center;
    margin-bottom: 3rem;
}


.section-title {
    font-size: 1.85rem;
    color: var(--text-primary);
    margin-bottom: 0.8rem;
    text-decoration: none;
    font-family: var(--font-heading);
}


.section-subtitle {
    font-size: 0.95rem;
    color: var(--text-muted);
    max-width: 650px;
    margin: 0 auto;
    font-family: var(--font-simple);
}


/* ========================================
   WHY CHOOSE US SECTION - 6 POINTS IN GRID
   ======================================== */


.why-choose-us {
    padding: 4.5rem 5%;
    background: var(--bg-primary);
}


.why-choose-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem 2rem;
}


.why-choose-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
}


.why-choose-icon {
    font-size: 1.6rem;
    color: var(--text-primary);
    flex-shrink: 0;
    margin-top: 0.2rem;
}


.why-choose-text h3 {
    font-size: 1.05rem;
    margin-bottom: 0.4rem;
    color: var(--text-primary);
    text-decoration: none;
    font-family: var(--font-simple);
}


.why-choose-text p {
    color: var(--text-body);
    line-height: 1.6;
    font-size: 0.85rem;
    font-family: var(--font-simple);
}


/* ========================================
   FEATURED UNIVERSITIES SECTION - UPDATED WITH SMALLER TEXT
   ======================================== */


.featured-universities {
    padding: 4.5rem 5%;
    background: var(--bg-primary);
}


.featured-description {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 2.5rem;
    color: var(--text-body);
    font-size: 0.9rem;
    line-height: 1.6;
    font-family: var(--font-simple);
}


/* Horizontal scroll container */
.university-logos-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    overflow: hidden;
}


.university-logos-carousel {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 1rem 0 1.5rem;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
    cursor: grab;
}


.university-logos-carousel:active {
    cursor: grabbing;
}


.university-logos-carousel::-webkit-scrollbar {
    display: none;
}


/* University Card - NO HOVER EFFECTS, NO BOX SHADOW */
.university-logo-item {
    flex: 0 0 520px;
    background: var(--bg-surface);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    overflow: hidden;
    scroll-snap-align: start;
    transition: none;
    box-shadow: none !important;
    cursor: pointer;
    user-select: none;
    margin-right: 20px; /* Added space between cards */
}


/* Removed hover effects */
.university-logo-item:hover {
    transform: none;
    box-shadow: none !important;
    border-color: rgba(0, 0, 0, 0.08);
}


/* Card Content Wrapper - FIXED: Equal padding on left and right */
.university-card-content {
    padding: 1.5rem 1.5rem 1.5rem 1.5rem;
    position: relative;
    text-align: left;
}


/* Admission Open Badge - Green - Smaller */
.admission-badge {
    display: inline-block;
    background: #22C55E;
    color: #FFFFFF;
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    margin-bottom: 1.2rem;
    text-align: left;
    font-family: var(--font-simple);
}


/* Card Header with Logo */
.university-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1.2rem;
    margin-bottom: 1.5rem;
}


.university-text-info {
    flex: 1;
}


.university-location-text {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0.6rem;
    font-weight: 500;
    font-family: var(--font-simple);
}


.university-name-large {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.3;
    margin: 0;
}


/* Logo Box - Perfect Square */
.university-logo-box {
    width: 100px;
    height: 100px;
    background: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem;
    flex-shrink: 0;
}


.university-logo-box img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}


/* Card Footer - Only Fees (Deadline Removed) */
.university-card-footer {
    padding-top: 1.2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
}


.footer-item h4 {
    font-size: 0.7rem;
    color: var(--text-muted);
    font-weight: 600;
    margin-bottom: 0.3rem;
    font-family: var(--font-simple);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}


.footer-item p {
    font-size: 1.1rem;
    color: var(--text-primary);
    font-weight: 700;
    font-family: var(--font-heading);
    margin: 0;
}


/* View More Button */
.view-more-btn {
    background: var(--bright-blue); /* Bright blue background */
    color: #FFFFFF;
    font-family: var(--font-simple);
    font-weight: 600;
    font-size: 0.85rem;
    padding: 0.8rem 2.2rem;
    border: none;
    cursor: pointer;
    transition: all 0.25s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 25px; /* Curved edges */
    margin-top: 2.8rem;
}


.view-more-btn:hover {
    background: var(--bright-blue-hover);
    transform: translateY(-2px);
}

/* Animated Arrow */
@keyframes slide-right {
    0% { transform: translateX(0); }
    50% { transform: translateX(5px); }
    100% { transform: translateX(0); }
}

.animated-arrow {
    animation: slide-right 1s infinite;
}


/* ========================================
   STUDENT SUCCESS STORIES - UPDATED SIMPLE DESIGN
   ======================================== */


.student-stories {
    padding: 4.5rem 5%;
    background: var(--bg-surface);
}


.stories-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
}


.stories-carousel {
    display: flex;
    gap: 1.8rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 1rem 0 1.5rem;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
}


.stories-carousel::-webkit-scrollbar {
    display: none;
}


/* Simple Story Card - NO HOVER EFFECTS */
.story-card {
    flex: 0 0 350px;
    background: var(--bg-surface);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    overflow: hidden;
    scroll-snap-align: start;
    transition: none;
    box-shadow: var(--shadow-soft);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    cursor: pointer;
}

/* Remove all hover effects */
.story-card:hover {
    box-shadow: var(--shadow-soft);
    transform: none;
}

/* Top Section with Rating and Student Info */
.story-card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    padding-bottom: 1.2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}

.student-info-left {
    flex: 1;
}

/* Rating Stars */
.student-rating {
    display: flex;
    gap: 0.2rem;
    margin-bottom: 0.8rem;
    align-items: center;
}

.star {
    color: var(--star-yellow);
    font-size: 1rem;
}

.star.half {
    position: relative;
}

.star.half:after {
    content: '★';
    position: absolute;
    left: 0;
    width: 50%;
    overflow: hidden;
    color: var(--star-yellow);
}

.star.empty {
    color: #E5E7EB;
}

.rating-text {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-left: 0.5rem;
    font-weight: 600;
    font-family: var(--font-simple);
}

/* Student Details */
.student-details {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
}

.student-name {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.3;
}

.student-course {
    font-size: 0.85rem;
    color: var(--accent-primary);
    font-weight: 600;
    font-family: var(--font-simple);
}

.student-university {
    font-size: 0.8rem;
    color: var(--text-muted);
    font-weight: 500;
    font-family: var(--font-simple);
}

/* Student Image - Small like university cards */
.student-image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
    border: 1px solid rgba(0, 0, 0, 0.08);
}

.student-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Bottom Section with Review */
.story-card-bottom {
    padding-top: 0.5rem;
}

.review-text {
    color: var(--text-body);
    font-size: 0.9rem;
    line-height: 1.6;
    font-style: italic;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-family: var(--font-simple);
}

/* ========================================
   FAQ SECTION - COMPLETELY UPDATED WITH BETTER MOBILE VISIBILITY
   ======================================== */


.faq-section {
    padding: 4.5rem 5%;
    background: var(--bg-primary);
    position: relative;
}


.faq-container {
    max-width: 850px;
    margin: 0 auto;
}


.faq-item {
    background: transparent;
    margin-bottom: 0;
    overflow: hidden;
    position: relative;
    padding: 0;
    border: none;
    box-shadow: none !important;
    border-radius: 0;
    transition: none;
}


/* Remove ALL hover effects from FAQ */
.faq-item:hover {
    background: transparent !important;
    box-shadow: none !important;
    transform: none !important;
}


.faq-item:hover .faq-question {
    transform: none !important;
    margin: 0 !important;
    padding: 1.2rem 0 !important;
}


.faq-item:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 5%;
    right: 5%;
    height: 1px;
    background: linear-gradient(
        to right,
        transparent 0%,
        rgba(0, 0, 0, 0.1) 10%,
        rgba(0, 0, 0, 0.1) 90%,
        transparent 100%
    );
}


.faq-question {
    padding: 1.2rem 0;
    cursor: default;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: transparent;
    transition: none;
    font-family: var(--font-simple);
}


.faq-question:hover {
    transform: none !important;
    margin: 0 !important;
    padding: 1.2rem 0 !important;
}


/* FAQ Question Text - Ensure complete visibility */
.faq-question h3 {
    color: var(--text-primary);
    font-size: 0.92rem; /* Slightly larger for better readability */
    font-weight: 600;
    margin: 0;
    text-decoration: none;
    flex: 1;
    padding-right: 1rem;
    line-height: 1.4; /* Better line height */
    white-space: normal; /* Allow wrapping */
    overflow: visible;
    text-overflow: clip;
    font-family: var(--font-simple);
}


.faq-question i {
    color: var(--accent-primary);
    transition: none;
    font-size: 0.9rem;
    flex-shrink: 0;
    margin-left: 0.5rem;
}


.faq-item.active .faq-question i {
    transform: rotate(180deg);
}


.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
    background: transparent;
}


.faq-item.active .faq-answer {
    max-height: 500px;
    padding: 0 0 1.2rem;
}


.faq-answer p {
    color: var(--text-body);
    line-height: 1.7;
    margin: 0;
    font-size: 0.85rem;
    font-family: var(--font-simple);
}


/* ========================================
   CTA SECTION WITH UPDATED TEXT
   ======================================== */


.cta-section {
    padding: 4.5rem 5%;
    background: var(--bg-surface);
    text-align: center;
}


.cta-content {
    max-width: 750px;
    margin: 0 auto;
}


.cta-content h2 {
    font-size: 1.95rem;
    margin-bottom: 0.9rem;
    color: var(--text-primary);
    text-decoration: none;
    font-family: var(--font-heading);
}


.cta-content p {
    font-size: 1rem;
    color: var(--text-body);
    margin-bottom: 2rem;
    font-family: var(--font-simple);
}


.cta-buttons {
    display: flex;
    gap: 1.1rem;
    justify-content: center;
    flex-wrap: wrap;
}


.btn-primary.large,
