<style>
    /* FAQ Section with Matrix Background */
/* FAQ Section with Blue Matrix Background */
.faq-section {
    padding: 6rem 5%;
    background: #000000; /* Pure black background */
    position: relative;
    overflow: hidden;
}

#faq-matrix-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.faq-section .section-header,
.faq-container {
    position: relative;
    z-index: 1;
}

.faq-section .section-title {
    color: #ffffff;
}

.faq-section .section-subtitle {
    color: rgba(255, 255, 255, 0.8);
}

.faq-container {
    max-width: 900px;
    margin: 0 auto;
}

.faq-item {
    background: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
    backdrop-filter: blur(10px); /* Blur effect */
    -webkit-backdrop-filter: blur(10px); /* Safari support */
    margin-bottom: 1.5rem;
    border-radius: 0; /* No border radius */
    overflow: hidden;
    border: 2px solid rgba(255, 255, 255, 0.2);
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
}

.faq-item:hover {
    border-color: rgba(0, 166, 255, 0.6);
    box-shadow: 0 8px 25px rgba(0, 166, 255, 0.3);
    background: rgba(0, 0, 0, 0.7); /* Darker on hover */
}

.faq-question {
    padding: 1.8rem 2rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid #ffffff; /* White underline */
    transition: all 0.3s ease;
    background: transparent;
}

.faq-item.active .faq-question {
    border-bottom-color: #00A6FF; /* Blue underline when active */
}

.faq-question h3 {
    color: #ffffff; /* White text for visibility */
    font-size: 1.15rem;
    font-weight: 600;
    margin: 0;
}

.faq-question i {
    color: #00A6FF; /* Blue icon */
    transition: transform 0.3s ease;
    font-size: 1.2rem;
}

.faq-item.active .faq-question i {
    transform: rotate(180deg);
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
    background: transparent;
}

.faq-item.active .faq-answer {
    max-height: 500px;
    padding: 1.5rem 2rem 2rem;
}

.faq-answer p {
    color: rgba(255, 255, 255, 0.85); /* Light white text for answer */
    line-height: 1.8;
    margin: 0;
    font-size: 1rem;
}

</style>
<script>
    // Blue Matrix Rain Background for FAQ Section
document.addEventListener('DOMContentLoaded', function() {
    const canvas = document.getElementById('faq-matrix-canvas');
    if (!canvas) return;
    
    const ctx = canvas.getContext('2d');
    
    // Set canvas size
    function resizeCanvas() {
        canvas.width = canvas.offsetWidth;
        canvas.height = canvas.offsetHeight;
    }
    resizeCanvas();
    
    const chars = '01';
    const fontSize = 14;
    let columns = canvas.width / fontSize;
    let drops = [];
    
    // Initialize drops
    for (let i = 0; i < columns; i++) {
        drops[i] = Math.random() * -100;
    }
    
    function drawMatrix() {
        // Semi-transparent background for trail effect
        ctx.fillStyle = 'rgba(0, 8, 20, 0.05)';
        ctx.fillRect(0, 0, canvas.width, canvas.height);
        
        // Blue text color
        ctx.fillStyle = '#00A6FF'; // Bright blue
        ctx.font = fontSize + 'px monospace';
        
        for (let i = 0; i < drops.length; i++) {
            const text = chars[Math.floor(Math.random() * chars.length)];
            ctx.fillText(text, i * fontSize, drops[i] * fontSize);
            
            // Reset drop to top randomly
            if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                drops[i] = 0;
            }
            drops[i]++;
        }
    }
    
    // Animation loop
    setInterval(drawMatrix, 35);
    
    // Resize handler
    window.addEventListener('resize', function() {
        resizeCanvas();
        columns = canvas.width / fontSize;
        drops = [];
        for (let i = 0; i < columns; i++) {
            drops[i] = Math.random() * -100;
        }
    });
});

</script>
