<script>
// Stats counter animation
document.addEventListener('DOMContentLoaded', function() {
    // Stats counter animation
    const animateCounter = (element, target) => {
        const duration = 2000;
        const step = target / (duration / 16);
        let current = 0;
        
        const timer = setInterval(() => {
            current += step;
            if (current >= target) {
                element.textContent = target;
                clearInterval(timer);
            } else {
                element.textContent = Math.floor(current);
            }
        }, 16);
    };
    
    const observerOptions = {
        threshold: 0.5
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const counters = document.querySelectorAll('.stat-number');
                counters.forEach(counter => {
                    const target = parseInt(counter.getAttribute('data-target'));
                    animateCounter(counter, target);
                });
                observer.disconnect();
            }
        });
    }, observerOptions);
    
    const statsSection = document.querySelector('.stats-section');
    if (statsSection) {
        observer.observe(statsSection);
    }
    
    // University carousel swipe functionality
    const universityCarousel = document.getElementById('universityCarousel');
    let isDown = false;
    let startX;
    let scrollLeft;
    
    // Mouse events for university carousel
    universityCarousel.addEventListener('mousedown', (e) => {
        isDown = true;
        universityCarousel.style.cursor = 'grabbing';
        startX = e.pageX - universityCarousel.offsetLeft;
        scrollLeft = universityCarousel.scrollLeft;
        e.preventDefault();
    });
    
    universityCarousel.addEventListener('mouseleave', () => {
        isDown = false;
        universityCarousel.style.cursor = 'grab';
    });
    
    universityCarousel.addEventListener('mouseup', () => {
        isDown = false;
        universityCarousel.style.cursor = 'grab';
    });
    
    universityCarousel.addEventListener('mousemove', (e) => {
        if(!isDown) return;
        e.preventDefault();
        const x = e.pageX - universityCarousel.offsetLeft;
        const walk = (x - startX) * 1.5;
        universityCarousel.scrollLeft = scrollLeft - walk;
    });
    
    // Touch events for university carousel mobile
    universityCarousel.addEventListener('touchstart', (e) => {
        isDown = true;
        startX = e.touches[0].pageX - universityCarousel.offsetLeft;
        scrollLeft = universityCarousel.scrollLeft;
    });
    
    universityCarousel.addEventListener('touchend', () => {
        isDown = false;
    });
    
    universityCarousel.addEventListener('touchmove', (e) => {
        if(!isDown) return;
        const x = e.touches[0].pageX - universityCarousel.offsetLeft;
        const walk = (x - startX) * 1.5;
        universityCarousel.scrollLeft = scrollLeft - walk;
    });
    
    // Testimonial carousel swipe functionality
    const testimonialsCarousel = document.getElementById('testimonialsCarousel');
    let isDownTestimonial = false;
    let startXTestimonial;
    let scrollLeftTestimonial;
    
    testimonialsCarousel.addEventListener('mousedown', (e) => {
        isDownTestimonial = true;
        testimonialsCarousel.classList.add('active');
        startXTestimonial = e.pageX - testimonialsCarousel.offsetLeft;
        scrollLeftTestimonial = testimonialsCarousel.scrollLeft;
    });
    
    testimonialsCarousel.addEventListener('mouseleave', () => {
        isDownTestimonial = false;
        testimonialsCarousel.classList.remove('active');
    });
    
    testimonialsCarousel.addEventListener('mouseup', () => {
        isDownTestimonial = false;
        testimonialsCarousel.classList.remove('active');
    });
    
    testimonialsCarousel.addEventListener('mousemove', (e) => {
        if(!isDownTestimonial) return;
        e.preventDefault();
        const x = e.pageX - testimonialsCarousel.offsetLeft;
        const walk = (x - startXTestimonial) * 2;
        testimonialsCarousel.scrollLeft = scrollLeftTestimonial - walk;
    });
    
    // Touch events for testimonials mobile
    testimonialsCarousel.addEventListener('touchstart', (e) => {
        isDownTestimonial = true;
        startXTestimonial = e.touches[0].pageX - testimonialsCarousel.offsetLeft;
        scrollLeftTestimonial = testimonialsCarousel.scrollLeft;
    });
    
    testimonialsCarousel.addEventListener('touchend', () => {
        isDownTestimonial = false;
    });
    
    testimonialsCarousel.addEventListener('touchmove', (e) => {
        if(!isDownTestimonial) return;
        e.preventDefault();
        const x = e.touches[0].pageX - testimonialsCarousel.offsetLeft;
        const walk = (x - startXTestimonial) * 2;
        testimonialsCarousel.scrollLeft = scrollLeftTestimonial - walk;
    });
    
    // FAQ toggle functionality
    const faqQuestions = document.querySelectorAll('.faq-question');
    faqQuestions.forEach(question => {
        question.addEventListener('click', () => {
            const faqItem = question.parentElement;
            faqItem.classList.toggle('active');
        });
    });
});
</script>


