    <script>
        // Mobile menu functions
        let isMobileMenuOpen = false;
        
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
            const body = document.body;
            
            isMobileMenuOpen = !isMobileMenuOpen;
            
            if (isMobileMenuOpen) {
                mobileMenu.classList.add('active');
                mobileMenuOverlay.classList.add('active');
                body.classList.add('mobile-menu-open');
            } else {
                mobileMenu.classList.remove('active');
                mobileMenuOverlay.classList.remove('active');
                body.classList.remove('mobile-menu-open');
                
                // Close all dropdowns
                const allDropdowns = mobileMenu.querySelectorAll('.mobile-dropdown-content');
                allDropdowns.forEach(dropdown => dropdown.classList.remove('show'));
                
                const allCategories = mobileMenu.querySelectorAll('.mobile-programs-content');
                allCategories.forEach(category => category.classList.remove('show'));
                
                const allToggles = mobileMenu.querySelectorAll('.mobile-dropdown-toggle, .mobile-category-toggle');
                allToggles.forEach(toggle => toggle.classList.remove('active'));
            }
        }
        
        function toggleMobileDropdown(element, event) {
            event.stopPropagation();
            const dropdownContent = element.nextElementSibling;
            const isCurrentlyOpen = dropdownContent.classList.contains('show');
            
            // Close all other first-level dropdowns
            const allDropdowns = document.querySelectorAll('.mobile-dropdown-content');
            allDropdowns.forEach(dropdown => {
                if (dropdown !== dropdownContent) {
                    dropdown.classList.remove('show');
                }
            });
            
            // Close all category dropdowns
            const allCategories = document.querySelectorAll('.mobile-programs-content');
            allCategories.forEach(category => category.classList.remove('show'));
            
            // Toggle current dropdown
            dropdownContent.classList.toggle('show');
            element.classList.toggle('active');
            
            // Reset all other toggles
            const allToggles = document.querySelectorAll('.mobile-dropdown-toggle');
            allToggles.forEach(toggle => {
                if (toggle !== element) {
                    toggle.classList.remove('active');
                }
            });
            
            const allCategoryToggles = document.querySelectorAll('.mobile-category-toggle');
            allCategoryToggles.forEach(toggle => toggle.classList.remove('active'));
        }
        
        function toggleMobileCategory(element, event) {
            event.stopPropagation();
            const programsContent = element.nextElementSibling;
            
            // Close all other category dropdowns
            const allPrograms = document.querySelectorAll('.mobile-programs-content');
            allPrograms.forEach(programs => {
                if (programs !== programsContent) {
                    programs.classList.remove('show');
                }
            });
            
            // Toggle current category
            programsContent.classList.toggle('show');
            element.classList.toggle('active');
            
            // Reset all other category toggles
            const allCategoryToggles = document.querySelectorAll('.mobile-category-toggle');
            allCategoryToggles.forEach(toggle => {
                if (toggle !== element) {
                    toggle.classList.remove('active');
                }
            });
        }
        
        function closeMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
            const body = document.body;
            
            mobileMenu.classList.remove('active');
            mobileMenuOverlay.classList.remove('active');
            body.classList.remove('mobile-menu-open');
            isMobileMenuOpen = false;
            
            // Close all dropdowns
            const allDropdowns = mobileMenu.querySelectorAll('.mobile-dropdown-content');
            allDropdowns.forEach(dropdown => dropdown.classList.remove('show'));
            
            const allCategories = mobileMenu.querySelectorAll('.mobile-programs-content');
            allCategories.forEach(category => category.classList.remove('show'));
            
            const allToggles = mobileMenu.querySelectorAll('.mobile-dropdown-toggle, .mobile-category-toggle');
            allToggles.forEach(toggle => toggle.classList.remove('active'));
        }
        
        // Close menu when clicking overlay
        document.addEventListener('click', (event) => {
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
            const menuToggle = document.querySelector('.menu-toggle');
            
            if (isMobileMenuOpen && 
                !mobileMenu.contains(event.target) && 
                !menuToggle.contains(event.target) &&
                mobileMenuOverlay.contains(event.target)) {
                closeMobileMenu();
            }
        });
        
        // Close menu on Escape key
        document.addEventListener('keydown', (event) => {
            if (event.key === 'Escape' && isMobileMenuOpen) {
                closeMobileMenu();
            }
        });
    </script>
