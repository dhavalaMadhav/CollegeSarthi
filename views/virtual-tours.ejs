<%- include('partials/header') %>

<div class="main-container">
    <!-- Hero Section -->
    <section class="tours-hero">
        <div class="tours-hero-content">
            <h1>ðŸŽ¬ Virtual Campus Tours</h1>
            <p>Explore universities from the comfort of your home with immersive 360Â° videos and virtual walkthroughs</p>
        </div>
    </section>

    <!-- Filter Section -->
    <section class="tours-filters">
        <div class="filter-container">
            <button class="filter-btn active" data-location="all">
                <i class="fas fa-th"></i> All Tours
            </button>
            <button class="filter-btn" data-location="Campus">
                <i class="fas fa-university"></i> Campus
            </button>
            <button class="filter-btn" data-location="Library">
                <i class="fas fa-book"></i> Library
            </button>
            <button class="filter-btn" data-location="Labs">
                <i class="fas fa-flask"></i> Labs
            </button>
            <button class="filter-btn" data-location="Hostel">
                <i class="fas fa-bed"></i> Hostel
            </button>
            <button class="filter-btn" data-location="Sports Complex">
                <i class="fas fa-dumbbell"></i> Sports
            </button>
        </div>
    </section>

    <!-- Tours Grid -->
    <section class="tours-section">
        <div class="tours-grid" id="toursGrid">
            <!-- Tours will be loaded dynamically -->
        </div>
        
        <div id="noToursMessage" style="display: none; text-align: center; padding: 60px 20px;">
            <i class="fas fa-video" style="font-size: 80px; color: #ccc; margin-bottom: 20px;"></i>
            <h3 style="color: #666;">No tours found</h3>
            <p style="color: #999;">Try selecting a different category</p>
        </div>
    </section>

    <!-- Video Modal -->
    <div id="videoModal" class="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close" id="closeVideoModal">
                <i class="fas fa-times"></i>
            </button>
            
            <div class="video-player-wrapper">
                <iframe id="videoPlayer" 
                    width="100%" 
                    height="100%" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen>
                </iframe>
            </div>
            
            <div class="video-info">
                <h2 id="videoTitle"></h2>
                <p id="videoDescription"></p>
                <div class="video-stats">
                    <span><i class="fas fa-university"></i> <span id="videoUniversity"></span></span>
                    <span><i class="fas fa-eye"></i> <span id="videoViews"></span> views</span>
                    <span><i class="fas fa-clock"></i> <span id="videoDuration"></span></span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Tours Hero Section */
.tours-hero {
    background: linear-gradient(135deg, #1a365d 0%, #2c5282 100%);
    padding: 100px 30px 80px;
    text-align: center;
    color: white;
}

.tours-hero-content h1 {
    font-size: 52px;
    font-weight: 800;
    margin-bottom: 20px;
}

.tours-hero-content p {
    font-size: 22px;
    opacity: 0.95;
    max-width: 800px;
    margin: 0 auto;
}

/* Filter Section */
.tours-filters {
    padding: 40px 30px;
    background: #f8f9fa;
    border-bottom: 2px solid #e0e0e0;
}

.filter-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    justify-content: center;
}

.filter-btn {
    padding: 12px 25px;
    background: white;
    border: 2px solid #e0e0e0;
    color: #555;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
}

.filter-btn:hover {
    border-color: #2c5282;
    color: #2c5282;
    transform: translateY(-2px);
}

.filter-btn.active {
    background: #2c5282;
    border-color: #2c5282;
    color: white;
}

/* Tours Grid */
.tours-section {
    padding: 80px 30px;
    max-width: 1400px;
    margin: 0 auto;
}

.tours-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 35px;
}

.tour-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s;
    cursor: pointer;
}

.tour-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 25px rgba(44, 82, 130, 0.2);
}

.tour-thumbnail {
    position: relative;
    width: 100%;
    height: 220px;
    overflow: hidden;
}

.tour-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
}

.tour-card:hover .tour-thumbnail img {
    transform: scale(1.05);
}

.tour-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: rgba(44, 82, 130, 0.95);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
}

.tour-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 70px;
    height: 70px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    color: #2c5282;
    transition: all 0.3s;
}

.tour-card:hover .tour-play-button {
    transform: translate(-50%, -50%) scale(1.1);
    background: white;
}

.tour-info {
    padding: 25px;
}

.tour-university {
    color: #2c5282;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 5px;
}

.tour-title {
    font-size: 22px;
    font-weight: 700;
    color: #222;
    margin-bottom: 12px;
    line-height: 1.3;
}

.tour-description {
    font-size: 15px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 15px;
}

.tour-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 15px;
    border-top: 1px solid #eee;
    font-size: 14px;
    color: #888;
}

.tour-meta span {
    display: flex;
    align-items: center;
    gap: 5px;
}

/* Video Modal */
.video-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    z-index: 10000;
    overflow-y: auto;
    padding: 20px;
}

.video-modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
}

.video-modal-content {
    max-width: 1200px;
    width: 100%;
    background: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.video-modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    color: white;
    font-size: 24px;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s;
}

.video-modal-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg);
}

.video-player-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
}

.video-player-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.video-info {
    padding: 30px;
    background: #222;
    color: white;
}

.video-info h2 {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 15px;
}

.video-info p {
    font-size: 16px;
    line-height: 1.6;
    color: #bbb;
    margin-bottom: 20px;
}

.video-stats {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
    font-size: 15px;
    color: #888;
}

.video-stats span {
    display: flex;
    align-items: center;
    gap: 8px;
}

.video-stats i {
    color: #2c5282;
}

/* Responsive */
@media (max-width: 768px) {
    .tours-hero-content h1 {
        font-size: 36px;
    }
    
    .tours-hero-content p {
        font-size: 18px;
    }
    
    .tours-grid {
        grid-template-columns: 1fr;
    }
    
    .filter-container {
        gap: 10px;
    }
    
    .filter-btn {
        padding: 10px 18px;
        font-size: 14px;
    }
    
    .video-modal {
        padding: 10px;
    }
    
    .video-info h2 {
        font-size: 22px;
    }
}
</style>

<script>
let allTours = [];
let currentFilter = 'all';

// Load tours on page load
document.addEventListener('DOMContentLoaded', async () => {
    await loadTours();
    setupFilters();
});

// Load tours from API
async function loadTours() {
    try {
        const response = await fetch('/api/tours/all');
        const data = await response.json();
        
        if (data.success) {
            allTours = data.tours;
            displayTours(allTours);
        }
    } catch (error) {
        console.error('Error loading tours:', error);
    }
}

// Display tours in grid
function displayTours(tours) {
    const grid = document.getElementById('toursGrid');
    const noToursMsg = document.getElementById('noToursMessage');
    
    if (tours.length === 0) {
        grid.style.display = 'none';
        noToursMsg.style.display = 'block';
        return;
    }
    
    grid.style.display = 'grid';
    noToursMsg.style.display = 'none';
    
    grid.innerHTML = tours.map(tour => `
        <div class="tour-card" onclick="openVideo('${tour._id}')">
            <div class="tour-thumbnail">
                <img src="${tour.thumbnail || 'https://images.unsplash.com/photo-1562774053-701939374585?w=800'}" alt="${tour.title}">
                <div class="tour-badge">${getTourTypeLabel(tour.tourType)}</div>
                <div class="tour-play-button">
                    <i class="fas fa-play"></i>
                </div>
            </div>
            <div class="tour-info">
                <div class="tour-university">
                    <i class="fas fa-university"></i>
                    ${tour.university.name}
                </div>
                <h3 class="tour-title">${tour.title}</h3>
                <p class="tour-description">${tour.description || ''}</p>
                <div class="tour-meta">
                    <span><i class="fas fa-map-marker-alt"></i> ${tour.location}</span>
                    <span><i class="fas fa-eye"></i> ${tour.views.toLocaleString()}</span>
                    ${tour.duration ? `<span><i class="fas fa-clock"></i> ${tour.duration}</span>` : ''}
                </div>
            </div>
        </div>
    `).join('');
}

// Setup filter buttons
function setupFilters() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    
    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Update active state
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            
            // Filter tours
            const location = btn.dataset.location;
            currentFilter = location;
            
            if (location === 'all') {
                displayTours(allTours);
            } else {
                const filtered = allTours.filter(tour => tour.location === location);
                displayTours(filtered);
            }
        });
    });
}

// Open video modal
async function openVideo(tourId) {
    try {
        const response = await fetch(`/api/tours/${tourId}`);
        const data = await response.json();
        
        if (data.success) {
            const tour = data.tour;
            
            // Set video source
            const videoPlayer = document.getElementById('videoPlayer');
            videoPlayer.src = getEmbedUrl(tour.mediaUrl);
            
            // Set info
            document.getElementById('videoTitle').textContent = tour.title;
            document.getElementById('videoDescription').textContent = tour.description || '';
            document.getElementById('videoUniversity').textContent = tour.university.name;
            document.getElementById('videoViews').textContent = tour.views.toLocaleString();
            document.getElementById('videoDuration').textContent = tour.duration || 'N/A';
            
            // Show modal
            document.getElementById('videoModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }
    } catch (error) {
        console.error('Error opening video:', error);
    }
}

// Close video modal
document.getElementById('closeVideoModal').addEventListener('click', () => {
    closeVideoModal();
});

document.getElementById('videoModal').addEventListener('click', (e) => {
    if (e.target.id === 'videoModal') {
        closeVideoModal();
    }
});

function closeVideoModal() {
    const modal = document.getElementById('videoModal');
    const videoPlayer = document.getElementById('videoPlayer');
    
    modal.classList.remove('active');
    videoPlayer.src = '';
    document.body.style.overflow = 'auto';
}

// Convert YouTube URL to embed URL
function getEmbedUrl(url) {
    if (url.includes('youtube.com/watch')) {
        const videoId = url.split('v=')[1]?.split('&')[0];
        return `https://www.youtube.com/embed/${videoId}?autoplay=1`;
    } else if (url.includes('youtu.be/')) {
        const videoId = url.split('youtu.be/')[1]?.split('?')[0];
        return `https://www.youtube.com/embed/${videoId}?autoplay=1`;
    }
    return url;
}

// Get tour type label
function getTourTypeLabel(type) {
    const labels = {
        '360_video': '360Â° Tour',
        'video_walkthrough': 'Video Tour',
        'image_gallery': 'Gallery',
        'virtual_reality': 'VR Tour'
    };
    return labels[type] || 'Tour';
}

// Keyboard shortcuts
document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
        closeVideoModal();
    }
});
</script>

