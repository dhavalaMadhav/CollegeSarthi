<script>
    // Debug: Log universities count
    console.log('üìä Total universities loaded:', <%= universities.length %>);
    console.log('‚≠ê Featured universities:', <%= featuredUniversities.length %>);

    // Search functionality with input event
    document.getElementById('searchInput').addEventListener('input', function(e) {
        filterUniversities();
    });

    document.getElementById('universitySearchForm').addEventListener('submit', function(e) {
        e.preventDefault();
        filterUniversities();
    });

    // Auto-filter functionality for all filter elements
    document.querySelectorAll('.auto-filter').forEach(element => {
        element.addEventListener('change', filterUniversities);
        if (element.type === 'radio') {
            element.addEventListener('click', filterUniversities);
        }
    });

    // Budget range with auto-filter
    const budgetRange = document.getElementById('budgetRange');
    const budgetValue = document.getElementById('budgetValue');
    
    budgetRange.addEventListener('input', function() {
        const value = parseInt(this.value);
        if (value >= 100000) {
            budgetValue.textContent = '‚Çπ' + (value/100000).toFixed(1) + 'L';
        } else {
            budgetValue.textContent = '‚Çπ' + value.toLocaleString();
        }
        filterUniversities();
    });

    // Reset all filters
    document.getElementById('resetFilters').addEventListener('click', resetAllFilters);

    // Sidebar resize functionality
    const sidebar = document.querySelector('.filter-sidebar');
    const resizeHandle = document.querySelector('.resize-handle');
    
    let isResizing = false;
    
    resizeHandle.addEventListener('mousedown', function(e) {
        isResizing = true;
        document.addEventListener('mousemove', handleResize);
        document.addEventListener('mouseup', stopResize);
    });
    
    function handleResize(e) {
        if (!isResizing) return;
        
        const newWidth = e.clientX;
        if (newWidth >= 250 && newWidth <= 400) {
            sidebar.style.width = newWidth + 'px';
        }
    }
    
    function stopResize() {
        isResizing = false;
        document.removeEventListener('mousemove', handleResize);
        document.removeEventListener('mouseup', stopResize);
    }

    // Filter universities function - FIXED BUDGET LOGIC
    function filterUniversities() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const stateFilter = document.getElementById('stateFilter').value;
        const programmesFilter = document.getElementById('programmesFilter').value;
        const budgetValue = parseInt(budgetRange.value);
        
        // Get selected university type
        const selectedType = document.querySelector('input[name="type"]:checked').value;
        
        const universityCards = document.querySelectorAll('.university-card');
        let visibleCount = 0;
        
        universityCards.forEach(card => {
            const universityData = JSON.parse(card.getAttribute('data-university'));
            let visible = true;
            
            // Search term filter
            if (searchTerm !== '') {
                if (!universityData.name.includes(searchTerm) && 
                    !universityData.location.includes(searchTerm)) {
                    visible = false;
                }
            }
            
            // State filter
            if (stateFilter !== 'all' && universityData.state !== stateFilter) {
                visible = false;
            }
            
            // Programmes filter
            if (programmesFilter !== 'all') {
                const hasProgramme = universityData.programmes.some(programme => 
                    programme.toLowerCase().includes(programmesFilter)
                );
                if (!hasProgramme) {
                    visible = false;
                }
            }
            
            // Type filter
            if (selectedType !== 'all' && universityData.type !== selectedType) {
                visible = false;
            }
            
            // Budget filter - FIXED: Show universities with fee <= budget value
            // Also add a buffer for approximate fees
            if (budgetValue > 0) {
                // Get the maximum fee from the university's fee range
                const universityFee = universityData.fee || 0;
                
                // Only hide if university fee is significantly higher than budget
                // Add 20% buffer for flexibility
                if (universityFee > budgetValue * 1.2) {
                    visible = false;
                }
            }
            
            // Show/hide card
            card.style.display = visible ? 'flex' : 'none';
            if (visible) visibleCount++;
        });
        
        // Update count
        document.getElementById('filteredCount').textContent = visibleCount;
        
        // Show no results message if needed
        if (visibleCount === 0 && universityCards.length > 0) {
            const list = document.getElementById('universitiesList');
            if (list) {
                list.innerHTML = `
                    <div class="no-results">
                        <i class="fas fa-university"></i>
                        <h3>No Universities Found</h3>
                        <p>Try adjusting your search criteria or filters to find more universities.</p>
                        <button class="reset-filters" onclick="resetAllFilters()">
                            <i class="fas fa-redo"></i> Reset All Filters
                        </button>
                    </div>
                `;
            }
        }
    }

    // Reset all filters
    function resetAllFilters() {
        // Reset search input
        document.getElementById('searchInput').value = '';
        
        // Reset state filter
        document.getElementById('stateFilter').value = 'all';
        
        // Reset programmes filter
        document.getElementById('programmesFilter').value = 'all';
        
        // Reset budget range to max value
        budgetRange.value = 500000;
        budgetValue.textContent = '‚Çπ5L';
        
        // Reset radio buttons
        document.querySelector('input[name="type"][value="all"]').checked = true;
        
        // Show all cards
        const universityCards = document.querySelectorAll('.university-card');
        universityCards.forEach(card => {
            card.style.display = 'flex';
        });
        
        // Reset count
        document.getElementById('filteredCount').textContent = universityCards.length;
        
        // Remove no results message if present
        const noResults = document.querySelector('.no-results');
        if (noResults && document.getElementById('universitiesList')) {
            // Instead of reloading, just restore the list
            const list = document.getElementById('universitiesList');
            if (list) {
                // The list is already there, just ensure all cards are visible
                universityCards.forEach(card => card.style.display = 'flex');
            }
        }
    }

    // Initialize - Set initial budget to max to show all universities
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üéØ Featured universities shown in Top Picks:', <%= featuredUniversities.length %>);
        
        // Set initial budget to max value (500000 = ‚Çπ5L)
        budgetRange.value = 500000;
        budgetValue.textContent = '‚Çπ5L';
        
        // Show all universities initially
        const universityCards = document.querySelectorAll('.university-card');
        universityCards.forEach(card => {
            card.style.display = 'flex';
        });
        
        // Initialize sidebar width
        sidebar.style.width = '280px';
        
        // Update count to show all
        document.getElementById('filteredCount').textContent = universityCards.length;
        
        console.log('üí∞ Initial budget set to:', budgetRange.value);
    });
</script>
