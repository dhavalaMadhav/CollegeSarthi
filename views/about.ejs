<%- include('partials/header') %>

<style>
/* About Page - Swiss Design System - ENHANCED */

/* Global Scrollbar Hide */
html, body {
    overflow-x: hidden;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

::-webkit-scrollbar {
    display: none;
}

/* Hero Section - Updated Colors */
.about-hero {
    height: 350px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--white);
    padding: 120px 30px 40px;
    border-bottom: 2px solid var(--black);
    position: relative;
    overflow: hidden;
}

.about-hero-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(4, 1fr);
    gap: 2px;
    padding: 2px;
    background-color: rgba(255, 255, 255, 0.1);
    z-index: 1;
    opacity: 0.7;
}

.about-grid-cell {
    background-color: rgba(255, 255, 255, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--white);
    transition: all 0.3s ease;
}

.about-hero-content {
    max-width: 900px;
    position: relative;
    z-index: 2;
}

.about-hero h1 {
    font-size: 3.5rem;
    font-weight: var(--font-weight-black);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    display: inline-block;
    padding-bottom: 50px;
}

.about-hero h1::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--white);
    bottom: 15px;
    left: 0;
    z-index: 1;
}

.about-hero h1::before {
    content: '';
    position: absolute;
    width: 32px;
    height: 32px;
    background: var(--primary);
    border: 3px solid var(--white);
    border-radius: 50%;
    bottom: -3px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 10px rgba(255, 255, 255, 0.2);
}

.hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    font-weight: var(--font-weight-medium);
}

/* Content Sections - Updated Color Scheme */
.about-section {
    padding: 100px 40px;
    max-width: 1400px;
    margin: 0 auto;
}

.about-section:nth-child(even) {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-top: 2px solid var(--gray-200);
    border-bottom: 2px solid var(--gray-200);
}

.section-header {
    text-align: center;
    margin-bottom: 70px;
}

/* SECTION TITLES WITH PRIMARY COLOR ACCENT */
.section-title {
    font-size: 2.8rem;
    font-weight: var(--font-weight-black);
    color: var(--primary);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    display: inline-block;
    padding-bottom: 50px;
}

.section-title::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--primary);
    bottom: 15px;
    left: 0;
    z-index: 1;
}

.section-title::before {
    content: '';
    position: absolute;
    width: 32px;
    height: 32px;
    background: var(--white);
    border: 3px solid var(--primary);
    border-radius: 50%;
    bottom: -3px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 10px rgba(0, 85, 255, 0.1);
}

/* Alternate background for title rings in even sections */
.about-section:nth-child(even) .section-title::before {
    background: #f8fafc;
}

.section-subtitle {
    font-size: 1.3rem;
    color: var(--gray-600);
    font-weight: var(--font-weight-medium);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
}

/* Platform Mission Section */
.platform-mission {
    background: var(--white);
    border-radius: 0;
    padding: 60px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid var(--gray-200);
    margin-bottom: 60px;
}

.platform-title {
    font-size: 2rem;
    font-weight: var(--font-weight-bold);
    color: var(--primary);
    margin-bottom: 25px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.platform-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--gray-700);
    margin-bottom: 30px;
}

.platform-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
    margin-top: 40px;
}

.platform-highlight {
    text-align: center;
    padding: 25px;
    background: var(--primary-light);
    border: 2px solid rgba(0, 85, 255, 0.2);
    transition: all 0.3s ease;
}

.platform-highlight:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 8px 20px rgba(0, 85, 255, 0.15);
}

.highlight-icon {
    font-size: 2.5rem;
    color: var(--primary);
    margin-bottom: 15px;
}

.highlight-title {
    font-size: 1.2rem;
    font-weight: var(--font-weight-bold);
    color: var(--black);
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.highlight-text {
    color: var(--gray-700);
    font-size: 0.95rem;
    line-height: 1.6;
}

/* Consultant Section */
.consultant-profile {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 60px;
    align-items: center;
    margin: 60px 0;
    background: var(--white);
    padding: 50px;
    border: 2px solid var(--gray-200);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.consultant-image {
    width: 280px;
    height: 280px;
    border-radius: 0;
    overflow: hidden;
    border: 4px solid var(--primary);
    box-shadow: 8px 8px 0px 0px var(--primary-dark);
}

.consultant-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.consultant-image:hover img {
    transform: scale(1.05);
}

.consultant-info h2 {
    font-size: 2.5rem;
    font-weight: var(--font-weight-black);
    color: var(--primary);
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.consultant-title {
    font-size: 1.3rem;
    color: var(--gray-700);
    font-weight: var(--font-weight-bold);
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.consultant-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--gray-700);
    margin-bottom: 30px;
}

.expertise-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 25px;
}

.expertise-tag {
    background: var(--primary-light);
    color: var(--primary);
    padding: 10px 20px;
    font-size: 0.875rem;
    font-weight: var(--font-weight-bold);
    border: 2px solid var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
}

.expertise-tag:hover {
    background: var(--primary);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 4px 4px 0px 0px var(--primary-dark);
}

/* Vision & Mission - Updated Colors */
.vision-mission-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: 50px;
    margin-top: 60px;
}

.vision-card, .mission-card {
    background: var(--white);
    border: 2px solid var(--gray-200);
    padding: 50px;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.vision-card:hover, .mission-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: 0 12px 30px rgba(0, 85, 255, 0.15);
}

.vision-icon, .mission-icon {
    width: 90px;
    height: 90px;
    background: var(--primary);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.2rem;
    margin: 0 auto 30px;
    border: 3px solid var(--white);
    box-shadow: 0 0 0 4px var(--primary);
}

.vision-title, .mission-title {
    font-size: 1.6rem;
    font-weight: var(--font-weight-bold);
    color: var(--primary);
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.vision-text, .mission-text {
    font-size: 1.15rem;
    line-height: 1.7;
    color: var(--gray-700);
    max-width: 500px;
    margin: 0 auto;
}

/* Core Values - Enhanced */
.values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 35px;
    margin-top: 70px;
}

.value-card {
    background: var(--white);
    border: 2px solid var(--gray-200);
    padding: 40px 35px;
    text-align: center;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
}

.value-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--primary);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.value-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary);
    box-shadow: 0 15px 35px rgba(0, 85, 255, 0.15);
}

.value-card:hover::before {
    transform: scaleX(1);
}

.value-icon {
    font-size: 3rem;
    color: var(--primary);
    margin-bottom: 25px;
    transition: all 0.3s ease;
}

.value-card:hover .value-icon {
    transform: scale(1.2);
    color: var(--primary-dark);
}

.value-title {
    font-size: 1.3rem;
    font-weight: var(--font-weight-bold);
    color: var(--black);
    margin-bottom: 18px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.value-description {
    color: var(--gray-700);
    line-height: 1.7;
    font-size: 1rem;
}

/* Success Metrics */
.metrics-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    padding: 80px 40px;
    text-align: center;
    border: 2px solid var(--primary-dark);
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    max-width: 1200px;
    margin: 60px auto 0;
}

.metric-box {
    background: rgba(255, 255, 255, 0.1);
    padding: 40px 30px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.metric-box:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-5px);
    border-color: var(--white);
}

.metric-number {
    font-size: 3.5rem;
    font-weight: var(--font-weight-black);
    margin-bottom: 10px;
    line-height: 1;
}

.metric-label {
    font-size: 1rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.9;
}

/* Timeline - Enhanced */
.timeline {
    max-width: 1100px;
    margin: 70px auto 0;
    position: relative;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--primary);
    transform: translateX(-50%);
}

.timeline-item {
    position: relative;
    margin: 70px 0;
    width: 50%;
    padding: 0 40px;
}

.timeline-item:nth-child(odd) {
    left: 0;
    text-align: right;
}

.timeline-item:nth-child(even) {
    left: 50%;
}

.timeline-content {
    background: var(--white);
    border: 2px solid var(--gray-200);
    padding: 35px;
    position: relative;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
}

.timeline-content:hover {
    border-color: var(--primary);
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 85, 255, 0.15);
}

.timeline-date {
    font-size: 0.9rem;
    color: var(--primary);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 15px;
}

.timeline-title {
    font-size: 1.4rem;
    font-weight: var(--font-weight-bold);
    color: var(--black);
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.timeline-text {
    color: var(--gray-700);
    line-height: 1.7;
    font-size: 1rem;
}

.timeline-icon {
    position: absolute;
    left: 50%;
    top: 35px;
    transform: translateX(-50%);
    width: 50px;
    height: 50px;
    background: var(--primary);
    color: var(--white);
    border: 4px solid var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    z-index: 2;
    box-shadow: 0 0 0 4px var(--primary);
}

/* Partner Universities */
.partners-section {
    background: var(--white);
    border: 2px solid var(--gray-200);
    padding: 60px 40px;
    max-width: 900px;
    margin: 60px auto 0;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.partners-title {
    font-size: 1.5rem;
    color: var(--primary);
    font-weight: var(--font-weight-bold);
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.partners-text {
    font-size: 1.1rem;
    color: var(--gray-700);
    line-height: 1.7;
    max-width: 700px;
    margin: 0 auto;
}

.partner-logos {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
    margin-top: 40px;
}

.partner-logo {
    width: 120px;
    height: 60px;
    background: var(--gray-50);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    font-weight: var(--font-weight-bold);
    color: var(--primary);
    border: 2px solid var(--gray-300);
    padding: 15px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.partner-logo:hover {
    border-color: var(--primary);
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 85, 255, 0.15);
}

/* Quote Section - Enhanced */
.quote-section {
    background: linear-gradient(135deg, #1F2937 0%, #111827 100%);
    color: var(--white);
    text-align: center;
    padding: 100px 40px;
    position: relative;
    overflow: hidden;
}

.quote-section::before {
    content: '"';
    position: absolute;
    font-size: 20rem;
    color: rgba(255, 255, 255, 0.05);
    font-family: serif;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
}

.quote-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
}

.quote-text {
    font-size: 1.8rem;
    font-style: italic;
    line-height: 1.6;
    margin: 0 auto 30px;
    opacity: 0.95;
    font-weight: var(--font-weight-medium);
}

.quote-author {
    font-size: 1.1rem;
    font-weight: var(--font-weight-semibold);
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

/* CTA Section - Enhanced */
.cta-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    padding: 120px 40px;
    text-align: center;
    border-top: 2px solid var(--primary-dark);
    position: relative;
    overflow: hidden;
}

.cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        repeating-linear-gradient(
            45deg,
            transparent,
            transparent 20px,
            rgba(255, 255, 255, 0.05) 20px,
            rgba(255, 255, 255, 0.05) 40px
        );
    z-index: 1;
}

.cta-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
}

.cta-content h2 {
    font-size: 3rem;
    font-weight: var(--font-weight-black);
    color: var(--white);
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    display: inline-block;
    padding-bottom: 50px;
}

.cta-content h2::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--white);
    bottom: 15px;
    left: 0;
    z-index: 1;
}

.cta-content h2::before {
    content: '';
    position: absolute;
    width: 32px;
    height: 32px;
    background: var(--primary);
    border: 3px solid var(--white);
    border-radius: 50%;
    bottom: -3px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 10px rgba(255, 255, 255, 0.2);
}

.cta-content p {
    font-size: 1.3rem;
    margin-bottom: 50px;
    opacity: 0.9;
    color: var(--white);
}

.cta-buttons {
    display: flex;
    justify-content: center;
    gap: 25px;
    flex-wrap: wrap;
}

.cta-btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 22px 45px;
    background: var(--white);
    color: var(--primary);
    border: 2px solid var(--white);
    font-size: 1.1rem;
    font-weight: var(--font-weight-bold);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 8px 8px 0px 0px rgba(0, 68, 204, 0.3);
}

.cta-btn-primary:hover {
    background: var(--primary-dark);
    color: var(--white);
    transform: translate(-3px, -3px);
    box-shadow: 12px 12px 0px 0px rgba(0, 68, 204, 0.4);
}

/* Responsive Design */
@media (max-width: 1200px) {
    .vision-mission-grid {
        grid-template-columns: 1fr;
        gap: 40px;
    }
}

@media (max-width: 1024px) {
    .timeline::before {
        left: 30px;
    }
    
    .timeline-item {
        width: 100%;
        left: 70px !important;
        text-align: left !important;
        padding: 0 20px 0 70px;
    }
    
    .timeline-icon {
        left: 25px;
        transform: translateX(0);
    }
}

@media (max-width: 900px) {
    .consultant-profile {
        grid-template-columns: 1fr;
        gap: 40px;
        text-align: center;
    }
    
    .consultant-image {
        margin: 0 auto;
    }
    
    .expertise-tags {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .about-hero h1 {
        font-size: 2.8rem;
        padding-bottom: 40px;
    }
    
    .section-title {
        font-size: 2.2rem;
        padding-bottom: 40px;
    }
    
    .values-grid {
        grid-template-columns: 1fr;
    }
    
    .metrics-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .cta-content h2 {
        font-size: 2.5rem;
        padding-bottom: 40px;
    }
    
    .partner-logos {
        gap: 20px;
    }
    
    .partner-logo {
        width: 100px;
        height: 50px;
        font-size: 0.9rem;
    }
}

@media (max-width: 600px) {
    .about-section {
        padding: 70px 25px;
    }
    
    .metrics-grid {
        grid-template-columns: 1fr;
    }
    
    .vision-mission-grid {
        gap: 30px;
    }
    
    .vision-card, .mission-card {
        padding: 35px 25px;
    }
    
    .quote-text {
        font-size: 1.5rem;
    }
    
    .cta-section {
        padding: 80px 25px;
    }
}
</style>

