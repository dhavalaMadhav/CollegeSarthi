<%- include('partials/header') %>
    <div class="results-page-container">
        <div class="results-header">
            <h1>Your Career Assessment Results</h1>
            <p>Based on your responses, here are your personalized university recommendations</p>
        </div>
        
        <div class="score-display" id="scoreDisplay">
            <!-- Score will be populated by JS -->
        </div>
        
        <div class="recommendations-section">
            <h2>Recommended Universities For You</h2>
            <div id="recommendationsList">
                <!-- Recommendations will be populated by JS -->
            </div>
        </div>
        
        <div class="next-steps">
            <h2>What's Next?</h2>
            <div class="steps-grid">
                <div class="next-step-card">
                    <i class="fas fa-phone-alt"></i>
                    <h3>Talk to Our Counsellors</h3>
                    <p>Our guidance team will contact you within 24 hours</p>
                </div>
                <div class="next-step-card">
                    <i class="fas fa-file-alt"></i>
                    <h3>Get Detailed Information</h3>
                    <p>Receive comprehensive details about each university</p>
                </div>
                <div class="next-step-card">
                    <i class="fas fa-hands-helping"></i>
                    <h3>Admission Assistance</h3>
                    <p>Complete support throughout the admission process</p>
                </div>
            </div>
        </div>
        
        <div class="cta-section">
            <button class="btn-primary" onclick="window.location.href='/'">
                <i class="fas fa-home"></i> Back to Home
            </button>
            <button class="btn-secondary" onclick="window.location.href='/contact'">
                <i class="fas fa-envelope"></i> Contact Guidance Office
            </button>
        </div>
    </div>

<style>
.results-page-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 30px;
}

.results-header {
    text-align: center;
    margin-bottom: 60px;
}

.results-header h1 {
    font-size: 48px;
    color: #1a365d;
    margin-bottom: 20px;
    font-weight: 800;
}

.results-header p {
    font-size: 22px;
    color: #666;
}

.score-display {
    background: linear-gradient(135deg, #2c5282, #1a365d);
    color: white;
    padding: 50px;
    text-align: center;
    margin-bottom: 60px;
}

.recommendations-section {
    margin-bottom: 80px;
}

.recommendations-section h2 {
    font-size: 38px;
    color: #1a365d;
    text-align: center;
    margin-bottom: 50px;
    font-weight: 800;
}

.recommendation-card {
    background: white;
    border: 2px solid #e0e0e0;
    padding: 30px;
    margin-bottom: 30px;
    display: flex;
    gap: 30px;
    transition: all 0.3s;
    cursor: pointer;
}

.recommendation-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 rgba(44, 82, 130, 0.2);
    border-color: #2c5282;
}

.recommendation-image {
    width: 250px;
    height: 180px;
    flex-shrink: 0;
    overflow: hidden;
}

.recommendation-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.recommendation-content {
    flex: 1;
}

.match-badge {
    display: inline-block;
    background: #2c5282;
    color: white;
    padding: 8px 20px;
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 15px;
}

.recommendation-content h3 {
    font-size: 28px;
    color: #1a365d;
    margin-bottom: 10px;
    font-weight: 700;
}

.recommendation-content p {
    font-size: 17px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
}

.recommendation-actions {
    display: flex;
    gap: 15px;
}

.next-steps {
    background: #f8f9fa;
    padding: 60px 40px;
    margin-bottom: 60px;
}

.next-steps h2 {
    font-size: 38px;
    color: #1a365d;
    text-align: center;
    margin-bottom: 50px;
    font-weight: 800;
}

.steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
}

.next-step-card {
    background: white;
    padding: 40px 30px;
    text-align: center;
    border: 2px solid #e0e0e0;
}

.next-step-card i {
    font-size: 48px;
    color: #2c5282;
    margin-bottom: 20px;
}

.next-step-card h3 {
    font-size: 22px;
    color: #1a365d;
    margin-bottom: 15px;
    font-weight: 700;
}

.next-step-card p {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
}

.cta-section {
    text-align: center;
    padding: 40px 0;
    display: flex;
    justify-content: center;
    gap: 25px;
    flex-wrap: wrap;
}

@media (max-width: 768px) {
    .recommendation-card {
        flex-direction: column;
    }
    
    .recommendation-image {
        width: 100%;
    }
    
    .recommendation-actions {
        flex-direction: column;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const results = JSON.parse(localStorage.getItem('quizResults') || '{}');
    
    if (!results.quizScore) {
        window.location.href = '/quiz';
        return;
    }
    
    // Display score
    document.getElementById('scoreDisplay').innerHTML = `
        <div style="font-size: 80px; font-weight: 900; margin-bottom: 20px;">${results.quizScore}/100</div>
        <div style="font-size: 24px; opacity: 0.95;">Your Career Assessment Score</div>
    `;
    
    // Display recommendations
    const recommendationsList = document.getElementById('recommendationsList');
    if (results.recommendations && results.recommendations.length > 0) {
        recommendationsList.innerHTML = results.recommendations.map(rec => `
            <div class="recommendation-card" onclick="window.location.href='/university/${rec.id}'">
                <div class="recommendation-image">
                    <img src="${rec.image}" alt="${rec.name}">
                </div>
                <div class="recommendation-content">
                    <div class="match-badge">${rec.matchPercentage}% Match</div>
                    <h3>${rec.name}</h3>
                    <p><i class="fas fa-map-marker-alt"></i> ${rec.location} | <i class="fas fa-trophy"></i> ${rec.ranking}</p>
                    <div class="recommendation-actions">
                        <button class="btn-primary" onclick="event.stopPropagation(); window.location.href='/university/${rec.id}'">
                            View Details
                        </button>
                        <button class="btn-secondary" onclick="event.stopPropagation(); window.location.href='/contact'">
                            Get Admission Help
                        </button>
                    </div>
                </div>
            </div>
        `).join('');
    } else {
        recommendationsList.innerHTML = '<p style="text-align: center; padding: 60px; font-size: 20px; color: #666;">No specific recommendations found. Please contact our guidance office for personalized counselling.</p>';
    }
});
</script>

<%- include('partials/footer') %>
